---
// Sidebar navigation component
// Contains navigation menu for all system modules
---

<aside class="w-64 bg-primary-900 text-white flex flex-col h-full">
  <!-- Logo/Brand -->
  <div class="px-6 py-6 border-b border-primary-800">
    <div class="flex items-center space-x-3">
      <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center">
        <i class="pi pi-building text-primary-600 text-xl"></i>
      </div>
      <div>
        <h2 class="font-bold text-lg">Gov FMS</h2>
        <p class="text-xs text-primary-300">Financial System</p>
      </div>
    </div>
  </div>

  <!-- Navigation Menu -->
  <nav class="flex-1 overflow-y-auto scrollbar-thin py-4">
    <div class="px-3 space-y-1">
      <!-- Dashboard -->
      <a
        href="/dashboard"
        class="flex items-center px-3 py-2 text-sm font-medium rounded-md hover:bg-primary-800 transition-colors"
      >
        <i class="pi pi-th-large mr-3"></i>
        Dashboard
      </a>

      <!-- Budget Management -->
      <div class="mt-4">
        <h3 class="px-3 text-xs font-semibold text-primary-300 uppercase tracking-wider">
          Budget Management
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/budget/appropriations"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-wallet mr-3"></i>
            Appropriations
          </a>
          <a
            href="/budget/allotments"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-chart-pie mr-3"></i>
            Allotments
          </a>
          <a
            href="/budget/obligations"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-book mr-3"></i>
            Obligations
          </a>
        </div>
      </div>

      <!-- Disbursements -->
      <div class="mt-4">
        <h3 class="px-3 text-xs font-semibold text-primary-300 uppercase tracking-wider">
          Disbursements
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/disbursements"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-file-edit mr-3"></i>
            Disbursement Vouchers
          </a>
          <a
            href="/disbursements/pending"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-clock mr-3"></i>
            Pending Approvals
          </a>
        </div>
      </div>

      <!-- Payments -->
      <div class="mt-4">
        <h3 class="px-3 text-xs font-semibold text-primary-300 uppercase tracking-wider">
          Payments
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/payments/checks"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-credit-card mr-3"></i>
            Check Disbursement
          </a>
          <a
            href="/payments/ada"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-send mr-3"></i>
            ADA
          </a>
        </div>
      </div>

      <!-- Travel Management -->
      <div class="mt-4">
        <h3 class="px-3 text-xs font-semibold text-primary-300 uppercase tracking-wider">
          Travel
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/travel/itinerary"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-map-marker mr-3"></i>
            Itinerary of Travel
          </a>
          <a
            href="/travel/liquidation"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-receipt mr-3"></i>
            Liquidation Reports
          </a>
        </div>
      </div>

      <!-- Cash Management -->
      <div class="mt-4">
        <h3 class="px-3 text-xs font-semibold text-primary-300 uppercase tracking-wider">
          Cash & Treasury
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/cash/receipts"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-money-bill mr-3"></i>
            Cash Receipts
          </a>
          <a
            href="/cash/deposits"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-dollar mr-3"></i>
            Bank Deposits
          </a>
          <a
            href="/cash/reconciliations"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-check-square mr-3"></i>
            Reconciliation
          </a>
          <a
            href="/cash/petty-cash"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-wallet mr-3"></i>
            Petty Cash
          </a>
          <a
            href="/cash/position"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-chart-bar mr-3"></i>
            Cash Position
          </a>
          <a
            href="/cash/advances"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-briefcase mr-3"></i>
            Cash Advances
          </a>
        </div>
      </div>

      <!-- Revenue Management -->
      <div class="mt-4">
        <h3 class="px-3 text-xs font-semibold text-primary-300 uppercase tracking-wider">
          Revenue
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/revenue"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-chart-line mr-3"></i>
            Revenue Dashboard
          </a>
          <a
            href="/revenue/entries"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-plus-circle mr-3"></i>
            Revenue Entries
          </a>
          <a
            href="/revenue/receivables"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-list mr-3"></i>
            Accounts Receivable
          </a>
          <a
            href="/revenue/collections"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-money-bill mr-3"></i>
            Collections
          </a>
          <a
            href="/revenue/sources"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-sitemap mr-3"></i>
            Revenue Sources
          </a>
        </div>
      </div>

      <!-- Payroll -->
      <div class="mt-4">
        <h3 class="px-3 text-xs font-semibold text-primary-300 uppercase tracking-wider">
          Payroll
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/payroll/employees"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-users mr-3"></i>
            Employees
          </a>
          <a
            href="/payroll/periods"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-calendar mr-3"></i>
            Payroll Periods
          </a>
          <a
            href="/payroll/deductions"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-minus-circle mr-3"></i>
            Deductions
          </a>
          <a
            href="/payroll/adjustments"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-sliders-h mr-3"></i>
            Adjustments
          </a>
          <a
            href="/payroll/remittances"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-send mr-3"></i>
            Remittances
          </a>
          <a
            href="/payroll/thirteenth-month"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-gift mr-3"></i>
            13th Month Pay
          </a>
        </div>
      </div>

      <!-- Asset Management -->
      <div class="mt-4">
        <h3 class="px-3 text-xs font-semibold text-primary-300 uppercase tracking-wider">
          Assets
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/assets"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-building mr-3"></i>
            Asset Dashboard
          </a>
          <a
            href="/assets/categories"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-tags mr-3"></i>
            Asset Categories
          </a>
          <a
            href="/assets/fixed"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-box mr-3"></i>
            Fixed Assets
          </a>
          <a
            href="/assets/depreciation"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-chart-line mr-3"></i>
            Depreciation
          </a>
          <a
            href="/assets/disposals"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-trash mr-3"></i>
            Disposals
          </a>
        </div>
      </div>

      <!-- Inventory Management -->
      <div class="mt-4">
        <h3 class="px-3 text-xs font-semibold text-primary-300 uppercase tracking-wider">
          Inventory
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/inventory/items"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-shopping-bag mr-3"></i>
            Inventory Items
          </a>
          <a
            href="/inventory/transactions"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-arrows-h mr-3"></i>
            Transactions
          </a>
          <a
            href="/inventory/physical-count"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-clipboard mr-3"></i>
            Physical Count
          </a>
        </div>
      </div>

      <!-- Reports -->
      <div class="mt-4">
        <h3 class="px-3 text-xs font-semibold text-primary-300 uppercase tracking-wider">
          Reports
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/reports/far"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-chart-bar mr-3"></i>
            FAR Reports
          </a>
          <a
            href="/reports/bar"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-chart-line mr-3"></i>
            BAR Reports
          </a>
          <a
            href="/reports/assets/listing"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-building mr-3"></i>
            Asset Listing
          </a>
          <a
            href="/reports/assets/depreciation-summary"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-chart-line mr-3"></i>
            Depreciation Summary
          </a>
          <a
            href="/reports/assets/disposal-register"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-trash mr-3"></i>
            Disposal Register
          </a>
          <a
            href="/reports/inventory/stock-card"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-file-edit mr-3"></i>
            Stock Card
          </a>
          <a
            href="/reports/inventory/low-stock"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-exclamation-triangle mr-3"></i>
            Low Stock Report
          </a>
          <a
            href="/reports/inventory/valuation"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-dollar mr-3"></i>
            Inventory Valuation
          </a>
        </div>
      </div>

      <!-- Administration -->
      <div class="mt-4">
        <h3 class="px-3 text-xs font-semibold text-primary-300 uppercase tracking-wider">
          Administration
        </h3>
        <div class="mt-2 space-y-1">
          <a
            href="/admin/users"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-user mr-3"></i>
            Users
          </a>
          <a
            href="/admin/activity-dashboard"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-chart-line mr-3"></i>
            Activity Dashboard
          </a>
          <a
            href="/audit"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-history mr-3"></i>
            Audit Logs
          </a>
          <a
            href="/admin/settings"
            class="flex items-center px-3 py-2 text-sm rounded-md hover:bg-primary-800 transition-colors"
          >
            <i class="pi pi-cog mr-3"></i>
            Settings
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Footer -->
  <div class="px-6 py-4 border-t border-primary-800">
    <p class="text-xs text-primary-300">
      &copy; 2025 Philippine Government
    </p>
  </div>
</aside>
