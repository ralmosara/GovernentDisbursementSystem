---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ensureCSRFToken } from '../lib/security/csrf';

// Generate CSRF token for this session
const csrfToken = ensureCSRFToken(Astro.cookies);

// If already logged in, redirect to dashboard (handled by middleware)
---

<BaseLayout title="Login - Philippine Government FMS">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700 px-4">
    <div class="max-w-md w-full">
      <!-- Logo/Brand -->
      <div class="text-center mb-8">
  
        <h1 class="text-3xl font-bold text-white mb-2">
          Philippine Government FMS
        </h1>
        <p class="text-primary-200">
          Financial Management System
        </p>
      </div>

      <!-- Login Card -->
      <div class="bg-white rounded-lg shadow-2xl p-8">
        <div class="mb-6">
          <h2 class="text-2xl font-bold text-gray-900">Sign In</h2>
          <p class="text-sm text-gray-500 mt-1">
            Enter your credentials to access the system
          </p>
        </div>

        <!-- Error Message -->
        <div id="error-message" class="hidden alert alert-error mb-4">
          <i class="pi pi-exclamation-circle mr-2"></i>
          <span id="error-text"></span>
        </div>

        <!-- Rate Limit Warning -->
        <div id="rate-limit-warning" class="hidden alert alert-warning mb-4">
          <i class="pi pi-exclamation-triangle mr-2"></i>
          <span id="rate-limit-text"></span>
        </div>

        <!-- Login Form -->
        <form id="login-form" method="POST" action="/api/auth/login">
          <!-- CSRF Token -->
          <input type="hidden" name="csrf_token" value={csrfToken} />
          <div class="form-group">
            <label for="username" class="form-label form-label-required">
              Username
            </label>
            <input
              type="text"
              id="username"
              name="username"
              class="form-input"
              placeholder="Enter your username"
              required
              autocomplete="username"
            />
          </div>

          <div class="form-group">
            <label for="password" class="form-label form-label-required">
              Password
            </label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-input"
              placeholder="Enter your password"
              required
              autocomplete="current-password"
            />
          </div>

          <div class="flex items-center justify-between mb-6">
            <label class="flex items-center">
              <input
                type="checkbox"
                name="remember"
                class="rounded border-gray-300 text-primary-600 shadow-sm focus:border-primary-300 focus:ring focus:ring-primary-200 focus:ring-opacity-50"
              />
              <span class="ml-2 text-sm text-gray-600">Remember me</span>
            </label>
            <a href="/forgot-password" class="text-sm text-primary-600 hover:text-primary-700">
              Forgot password?
            </a>
          </div>

          <button
            type="submit"
            class="btn btn-primary btn-lg w-full"
            id="login-button"
          >
            <span id="login-button-text">Sign In</span>
            <span id="login-spinner" class="hidden">
              <span class="spinner spinner-sm mr-2"></span>
              Signing in...
            </span>
          </button>
        </form>

        <!-- Default Credentials Info -->
        <div class="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-md">
          <p class="text-xs text-blue-800 font-semibold mb-1">
            Default Credentials (Development):
          </p>
          <p class="text-xs text-blue-700">
            Username: <code class="bg-blue-100 px-1 rounded">admin</code><br/>
            Password: <code class="bg-blue-100 px-1 rounded">admin123</code>
          </p>
        </div>
      </div>

      <!-- Footer -->
      <div class="text-center mt-6">
        <p class="text-sm text-primary-200">
          &copy; 2025 Philippine Government. All rights reserved.
        </p>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById('login-form') as HTMLFormElement;
    const errorMessage = document.getElementById('error-message');
    const errorText = document.getElementById('error-text');
    const rateLimitWarning = document.getElementById('rate-limit-warning');
    const rateLimitText = document.getElementById('rate-limit-text');
    const loginButton = document.getElementById('login-button') as HTMLButtonElement;
    const loginButtonText = document.getElementById('login-button-text');
    const loginSpinner = document.getElementById('login-spinner');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Show loading state
      loginButton.disabled = true;
      loginButtonText?.classList.add('hidden');
      loginSpinner?.classList.remove('hidden');
      errorMessage?.classList.add('hidden');
      rateLimitWarning?.classList.add('hidden');

      const formData = new FormData(form);

      try {
        const response = await fetch('/api/auth/login', {
          method: 'POST',
          body: formData,
        });

        const result = await response.json();

        if (response.ok) {
          // Redirect to dashboard on success
          window.location.href = '/dashboard';
        } else if (response.status === 429) {
          // Rate limit exceeded
          if (errorText) {
            errorText.textContent = result.message || 'Too many login attempts. Please try again later.';
          }
          errorMessage?.classList.remove('hidden');

          // Reset button state
          loginButton.disabled = false;
          loginButtonText?.classList.remove('hidden');
          loginSpinner?.classList.add('hidden');
        } else if (response.status === 403) {
          // CSRF validation failed
          if (errorText) {
            errorText.textContent = 'Session expired. Please refresh the page and try again.';
          }
          errorMessage?.classList.remove('hidden');

          // Reset button state
          loginButton.disabled = false;
          loginButtonText?.classList.remove('hidden');
          loginSpinner?.classList.add('hidden');
        } else {
          // Show error message
          if (errorText) {
            errorText.textContent = result.error || 'Login failed. Please try again.';
          }
          errorMessage?.classList.remove('hidden');

          // Show rate limit warning if remaining attempts are low
          if (result.remainingAttempts !== undefined && result.remainingAttempts < 3 && result.remainingAttempts > 0) {
            if (rateLimitText) {
              rateLimitText.textContent = `Warning: ${result.remainingAttempts} login attempt(s) remaining before temporary lockout.`;
            }
            rateLimitWarning?.classList.remove('hidden');
          }

          // Reset button state
          loginButton.disabled = false;
          loginButtonText?.classList.remove('hidden');
          loginSpinner?.classList.add('hidden');
        }
      } catch (error) {
        console.error('Login error:', error);
        if (errorText) {
          errorText.textContent = 'An unexpected error occurred. Please try again.';
        }
        errorMessage?.classList.remove('hidden');

        // Reset button state
        loginButton.disabled = false;
        loginButtonText?.classList.remove('hidden');
        loginSpinner?.classList.add('hidden');
      }
    });
  </script>
</BaseLayout>
