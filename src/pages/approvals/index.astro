---
import MainLayout from '../../layouts/MainLayout.astro';
import { db } from '../../lib/db/connection';
import { approvalWorkflows, disbursementVouchers, userRoles, roles, fundClusters } from '../../lib/db/schema';
import { eq, and, desc } from 'drizzle-orm';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get user's roles
const userRolesList = await db
  .select({
    roleId: userRoles.roleId,
    roleName: roles.name,
    roleDisplayName: roles.displayName,
  })
  .from(userRoles)
  .innerJoin(roles, eq(userRoles.roleId, roles.id))
  .where(eq(userRoles.userId, user.id));

const roleIds = userRolesList.map(ur => ur.roleId);

// Get pending approvals for user's roles
// Map role names to approval stages
const roleStageMap: Record<string, string> = {
  'division_staff': 'division',
  'budget_officer': 'budget',
  'accountant': 'accounting',
  'director': 'director',
  'administrator': 'all', // Admins can approve any stage
};

// Get stages user can approve
const userStages = userRolesList
  .map(ur => roleStageMap[ur.roleName])
  .filter(Boolean);

// Get pending workflows
let pendingApprovals: any[] = [];

if (userStages.length > 0) {
  // Build query to get pending DVs
  const query = db
    .select({
      workflowId: approvalWorkflows.id,
      dvId: approvalWorkflows.dvId,
      stage: approvalWorkflows.stage,
      stageOrder: approvalWorkflows.stageOrder,
      dvNo: disbursementVouchers.dvNo,
      dvDate: disbursementVouchers.dvDate,
      payeeName: disbursementVouchers.payeeName,
      particulars: disbursementVouchers.particulars,
      amount: disbursementVouchers.amount,
      orsBursNo: disbursementVouchers.orsBursNo,
      fundClusterCode: fundClusters.code,
      fundClusterName: fundClusters.name,
      dvStatus: disbursementVouchers.status,
      createdAt: disbursementVouchers.createdAt,
    })
    .from(approvalWorkflows)
    .innerJoin(disbursementVouchers, eq(approvalWorkflows.dvId, disbursementVouchers.id))
    .leftJoin(fundClusters, eq(disbursementVouchers.fundClusterId, fundClusters.id))
    .where(eq(approvalWorkflows.status, 'pending'))
    .orderBy(desc(disbursementVouchers.createdAt));

  const allPendingWorkflows = await query;

  // Filter by user's stages (unless admin who can see all)
  if (userStages.includes('all')) {
    pendingApprovals = allPendingWorkflows;
  } else {
    pendingApprovals = allPendingWorkflows.filter(w =>
      userStages.includes(w.stage)
    );
  }
}

// Group by stage
const approvalsByStage = {
  division: pendingApprovals.filter(a => a.stage === 'division'),
  budget: pendingApprovals.filter(a => a.stage === 'budget'),
  accounting: pendingApprovals.filter(a => a.stage === 'accounting'),
  director: pendingApprovals.filter(a => a.stage === 'director'),
};

// Format date
const formatDate = (date: Date | string | null) => {
  if (!date) return 'N/A';
  const d = typeof date === 'string' ? new Date(date) : date;
  return d.toLocaleDateString('en-PH', { year: 'numeric', month: 'short', day: 'numeric' });
};

// Stage badge colors
const getStageBadge = (stage: string) => {
  switch (stage) {
    case 'division':
      return 'badge-info';
    case 'budget':
      return 'badge-warning';
    case 'accounting':
      return 'badge-primary';
    case 'director':
      return 'badge-success';
    default:
      return 'badge-secondary';
  }
};
---

<MainLayout title="Approval Queue">
  <div class="container-fluid py-6">
    <!-- Page Header -->
    <div class="page-header">
      <div>
        <h1 class="page-title">Approval Queue</h1>
        <p class="page-description">Disbursement vouchers pending your approval</p>
      </div>
    </div>

    <!-- User Roles Info -->
    <div class="card mb-6">
      <div class="card-body">
        <div class="flex items-center gap-4">
          <i class="pi pi-user text-2xl text-gray-400"></i>
          <div>
            <p class="text-sm font-medium text-gray-500">Your Approval Roles</p>
            <div class="flex gap-2 mt-1">
              {userRolesList.map(role => (
                <span class="badge badge-primary">{role.roleDisplayName}</span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
      {[
        { stage: 'division', label: 'Division', count: approvalsByStage.division.length, icon: 'pi-file-edit' },
        { stage: 'budget', label: 'Budget', count: approvalsByStage.budget.length, icon: 'pi-calculator' },
        { stage: 'accounting', label: 'Accounting', count: approvalsByStage.accounting.length, icon: 'pi-book' },
        { stage: 'director', label: 'Director', count: approvalsByStage.director.length, icon: 'pi-check-circle' },
      ].map(item => (
        <div class="card">
          <div class="card-body">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">{item.label} Approval</p>
                <p class="text-3xl font-bold text-gray-900 mt-1">{item.count}</p>
                <p class="text-sm text-gray-500 mt-1">Pending</p>
              </div>
              <div class={`w-12 h-12 rounded-full flex items-center justify-center ${getStageBadge(item.stage)} bg-opacity-10`}>
                <i class={`${item.icon} text-xl`}></i>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- No Pending Approvals -->
    {pendingApprovals.length === 0 && (
      <div class="card">
        <div class="card-body">
          <div class="text-center py-12">
            <i class="pi pi-check-circle text-6xl text-green-300 mb-4"></i>
            <p class="text-gray-500 text-lg">No pending approvals</p>
            <p class="text-gray-400 text-sm mt-2">You're all caught up!</p>
          </div>
        </div>
      </div>
    )}

    <!-- Pending Approvals Table -->
    {pendingApprovals.length > 0 && (
      <div class="card">
        <div class="card-header">
          <h3 class="text-lg font-semibold text-gray-900">
            Pending Approvals ({pendingApprovals.length})
          </h3>
        </div>
        <div class="card-body p-0">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    DV No.
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Date
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Payee
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Particulars
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    ORS/BURS No.
                  </th>
                  <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Amount
                  </th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Stage
                  </th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                {pendingApprovals.map(approval => (
                  <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <a
                        href={`/disbursements/${approval.dvId}`}
                        class="text-primary-600 hover:text-primary-800 font-semibold"
                      >
                        {approval.dvNo}
                      </a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      {formatDate(approval.dvDate)}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                      <div class="max-w-xs truncate" title={approval.payeeName}>
                        {approval.payeeName}
                      </div>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500">
                      <div class="max-w-md truncate" title={approval.particulars}>
                        {approval.particulars}
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      {approval.orsBursNo}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900 text-right">
                      ₱{parseFloat(approval.amount.toString()).toLocaleString('en-PH', { minimumFractionDigits: 2 })}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                      <span class={`badge ${getStageBadge(approval.stage)}`}>
                        {approval.stage.charAt(0).toUpperCase() + approval.stage.slice(1)}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                      <div class="flex items-center justify-center gap-2">
                        <a
                          href={`/disbursements/${approval.dvId}`}
                          class="btn btn-primary btn-sm"
                        >
                          <i class="pi pi-eye mr-1"></i>
                          Review
                        </a>
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    )}

    <!-- Stage Breakdown (Optional detailed view) -->
    {Object.entries(approvalsByStage).some(([_, items]) => items.length > 0) && (
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mt-6">
        {Object.entries(approvalsByStage).map(([stage, items]) => {
          if (items.length === 0) return null;

          return (
            <div class="card">
              <div class="card-header">
                <div class="flex items-center justify-between">
                  <h3 class="text-lg font-semibold text-gray-900 capitalize">
                    {stage} Approval Queue
                  </h3>
                  <span class={`badge ${getStageBadge(stage)}`}>
                    {items.length} Pending
                  </span>
                </div>
              </div>
              <div class="card-body">
                <div class="space-y-3">
                  {items.slice(0, 5).map(item => (
                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                      <div class="flex-1 min-w-0 mr-4">
                        <a
                          href={`/disbursements/${item.dvId}`}
                          class="text-sm font-semibold text-primary-600 hover:text-primary-800"
                        >
                          {item.dvNo}
                        </a>
                        <p class="text-xs text-gray-500 truncate mt-1">
                          {item.payeeName}
                        </p>
                      </div>
                      <div class="text-right">
                        <p class="text-sm font-semibold text-gray-900">
                          ₱{parseFloat(item.amount.toString()).toLocaleString('en-PH', { minimumFractionDigits: 2 })}
                        </p>
                        <p class="text-xs text-gray-500">
                          {formatDate(item.dvDate)}
                        </p>
                      </div>
                    </div>
                  ))}
                  {items.length > 5 && (
                    <p class="text-sm text-gray-500 text-center pt-2">
                      And {items.length - 5} more...
                    </p>
                  )}
                </div>
              </div>
            </div>
          );
        })}
      </div>
    )}
  </div>
</MainLayout>
