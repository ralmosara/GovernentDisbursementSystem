---
import MainLayout from '../layouts/MainLayout.astro';

const user = Astro.locals.user;
---

<MainLayout title="Dashboard - Philippine Government FMS">
  <div class="page-header">
    <h1 class="page-title">Dashboard</h1>
    <p class="page-description">Welcome back, {user?.firstName}! Overview of financial operations and pending actions</p>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <!-- Pending DVs -->
    <div class="card">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 mb-1">Pending DVs</p>
            <p class="text-3xl font-bold text-gray-900">0</p>
          </div>
          <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
            <i class="pi pi-clock text-yellow-600 text-2xl"></i>
          </div>
        </div>
        <div class="mt-4">
          <a href="/disbursements/pending" class="text-sm text-primary-600 hover:text-primary-700">
            View all →
          </a>
        </div>
      </div>
    </div>

    <!-- Approved DVs -->
    <div class="card">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 mb-1">Approved DVs</p>
            <p class="text-3xl font-bold text-gray-900">0</p>
          </div>
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
            <i class="pi pi-check-circle text-green-600 text-2xl"></i>
          </div>
        </div>
        <div class="mt-4">
          <a href="/disbursements?status=approved" class="text-sm text-primary-600 hover:text-primary-700">
            View all →
          </a>
        </div>
      </div>
    </div>

    <!-- Total Disbursements -->
    <div class="card">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 mb-1">Total Disbursements</p>
            <p class="text-3xl font-bold text-gray-900">₱0.00</p>
          </div>
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <i class="pi pi-wallet text-blue-600 text-2xl"></i>
          </div>
        </div>
        <div class="mt-4">
          <p class="text-sm text-gray-500">This month</p>
        </div>
      </div>
    </div>

    <!-- Budget Utilization -->
    <div class="card">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 mb-1">Budget Utilization</p>
            <p class="text-3xl font-bold text-gray-900">0%</p>
          </div>
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <i class="pi pi-chart-pie text-purple-600 text-2xl"></i>
          </div>
        </div>
        <div class="mt-4">
          <a href="/budget/allotments" class="text-sm text-primary-600 hover:text-primary-700">
            View details →
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-6">
    <h2 class="section-title">Quick Actions</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <a
        href="/disbursements/create"
        class="card hover:shadow-md transition-shadow cursor-pointer"
      >
        <div class="card-body text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-3">
            <i class="pi pi-plus text-primary-600 text-xl"></i>
          </div>
          <p class="text-sm font-medium text-gray-900">New DV</p>
        </div>
      </a>

      <a
        href="/travel/itinerary/create"
        class="card hover:shadow-md transition-shadow cursor-pointer"
      >
        <div class="card-body text-center">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-3">
            <i class="pi pi-map-marker text-green-600 text-xl"></i>
          </div>
          <p class="text-sm font-medium text-gray-900">New Travel</p>
        </div>
      </a>

      <a
        href="/cash/receipts/create"
        class="card hover:shadow-md transition-shadow cursor-pointer"
      >
        <div class="card-body text-center">
          <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mx-auto mb-3">
            <i class="pi pi-money-bill text-yellow-600 text-xl"></i>
          </div>
          <p class="text-sm font-medium text-gray-900">Cash Receipt</p>
        </div>
      </a>

      <a
        href="/reports"
        class="card hover:shadow-md transition-shadow cursor-pointer"
      >
        <div class="card-body text-center">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-3">
            <i class="pi pi-chart-bar text-purple-600 text-xl"></i>
          </div>
          <p class="text-sm font-medium text-gray-900">Generate Report</p>
        </div>
      </a>
    </div>
  </div>

  <!-- Welcome Card -->
  <div class="mt-6">
    <div class="card bg-gradient-to-r from-primary-500 to-primary-600 border-0">
      <div class="card-body text-white p-6">
        <h3 class="text-2xl font-bold mb-2">Welcome to Philippine Government FMS</h3>
        <p class="text-primary-100 mb-4">
          Your comprehensive financial management system for government operations.
          Get started by creating a disbursement voucher or exploring the system.
        </p>
        <div class="flex gap-3">
          <a href="/disbursements/create" class="btn bg-white text-primary-600 hover:bg-gray-100">
            <i class="pi pi-plus mr-2"></i>
            Create Disbursement Voucher
          </a>
          <a href="/reports" class="btn bg-primary-700 text-white hover:bg-primary-800 border-primary-700">
            <i class="pi pi-chart-bar mr-2"></i>
            View Reports
          </a>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
