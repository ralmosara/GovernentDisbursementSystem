---
import MainLayout from '../../../layouts/MainLayout.astro';
import { assetService } from '../../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get query parameters
const url = new URL(Astro.request.url);
const itemId = url.searchParams.get('itemId');
const transactionType = url.searchParams.get('type');

// Fetch transactions
let transactions: any[] = [];
let items: any[] = [];

try {
  const filters: any = {};
  if (itemId) filters.itemId = parseInt(itemId);
  if (transactionType) filters.transactionType = transactionType;

  transactions = await assetService.getInventoryTransactions(filters);
  items = await assetService.getInventoryItems({ isActive: true });
} catch (error) {
  console.error('Error loading transactions:', error);
}

const transactionTypes = [
  { value: 'receipt', label: 'Receipt', color: 'bg-green-100 text-green-800' },
  { value: 'issue', label: 'Issue', color: 'bg-red-100 text-red-800' },
  { value: 'adjustment', label: 'Adjustment', color: 'bg-orange-100 text-orange-800' },
  { value: 'transfer', label: 'Transfer', color: 'bg-blue-100 text-blue-800' },
];

const getTypeConfig = (type: string) => {
  return transactionTypes.find(t => t.value === type) || transactionTypes[0];
};
---

<MainLayout title="Inventory Transactions">
  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Inventory Transactions</h1>
        <p class="mt-1 text-sm text-gray-600">
          Track stock movements and adjustments
        </p>
      </div>
      <a
        href="/inventory/transactions/create"
        class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
      >
        <i class="pi pi-plus mr-2"></i>
        New Transaction
      </a>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6">
      <form method="GET" class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label for="itemId" class="block text-sm font-medium text-gray-700 mb-1">
            Filter by Item
          </label>
          <select
            id="itemId"
            name="itemId"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          >
            <option value="">All Items</option>
            {items.map((item: any) => (
              <option value={item.id} selected={itemId === item.id.toString()}>
                {item.itemCode} - {item.itemName}
              </option>
            ))}
          </select>
        </div>

        <div>
          <label for="type" class="block text-sm font-medium text-gray-700 mb-1">
            Transaction Type
          </label>
          <select
            id="type"
            name="type"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          >
            <option value="">All Types</option>
            {transactionTypes.map((type) => (
              <option value={type.value} selected={transactionType === type.value}>
                {type.label}
              </option>
            ))}
          </select>
        </div>

        <div class="flex items-end">
          <button
            type="submit"
            class="w-full px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 font-medium"
          >
            Apply Filters
          </button>
        </div>
      </form>
    </div>

    <!-- Transactions Table -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
      {transactions.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Transaction No.
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Date
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Item
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Type
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Quantity
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Unit Cost
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Total Value
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Reference
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {transactions.map((txn: any) => {
                const typeConfig = getTypeConfig(txn.transactionType);
                return (
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      {txn.transactionNo}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {new Date(txn.transactionDate).toLocaleDateString()}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                      {txn.item ? (
                        <div>
                          <div class="font-medium">{txn.item.itemCode}</div>
                          <div class="text-xs text-gray-500">{txn.item.itemName}</div>
                        </div>
                      ) : '-'}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                      <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${typeConfig.color}`}>
                        {typeConfig.label}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium text-gray-900">
                      {txn.quantity} {txn.item?.unit}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                      ₱{Number(txn.unitCost).toLocaleString()}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-semibold text-gray-900">
                      ₱{txn.totalValue.toLocaleString()}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {txn.reference || '-'}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <a
                        href={`/inventory/transactions/${txn.id}`}
                        class="text-primary-600 hover:text-primary-900"
                      >
                        View
                      </a>
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      ) : (
        <div class="px-6 py-12 text-center">
          <i class="pi pi-inbox text-gray-400 text-4xl mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No transactions found</h3>
          <p class="text-gray-500 mb-4">
            {itemId || transactionType
              ? 'No transactions match your filters.'
              : 'Start by recording your first inventory transaction.'}
          </p>
          <a
            href="/inventory/transactions/create"
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
          >
            <i class="pi pi-plus mr-2"></i>
            New Transaction
          </a>
        </div>
      )}
    </div>

    <!-- Summary Cards -->
    {transactions.length > 0 && (
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mt-6">
        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="flex items-center">
            <div class="p-3 bg-blue-100 rounded-full">
              <i class="pi pi-list text-blue-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Transactions</p>
              <p class="text-2xl font-bold text-gray-900">{transactions.length}</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="flex items-center">
            <div class="p-3 bg-green-100 rounded-full">
              <i class="pi pi-plus-circle text-green-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Receipts</p>
              <p class="text-2xl font-bold text-gray-900">
                {transactions.filter(t => t.transactionType === 'receipt').length}
              </p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="flex items-center">
            <div class="p-3 bg-red-100 rounded-full">
              <i class="pi pi-minus-circle text-red-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Issues</p>
              <p class="text-2xl font-bold text-gray-900">
                {transactions.filter(t => t.transactionType === 'issue').length}
              </p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="flex items-center">
            <div class="p-3 bg-purple-100 rounded-full">
              <i class="pi pi-dollar text-purple-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Value</p>
              <p class="text-2xl font-bold text-gray-900">
                ₱{transactions.reduce((sum, t) => sum + t.totalValue, 0).toLocaleString()}
              </p>
            </div>
          </div>
        </div>
      </div>
    )}
  </div>
</MainLayout>
