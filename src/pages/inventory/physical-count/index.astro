---
import MainLayout from '../../../layouts/MainLayout.astro';
import { assetService } from '../../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get query parameters
const url = new URL(Astro.request.url);
const itemId = url.searchParams.get('itemId');
const fromDate = url.searchParams.get('fromDate');
const toDate = url.searchParams.get('toDate');

// Fetch physical counts
let counts: any[] = [];
let items: any[] = [];

try {
  const filters: any = {};
  if (itemId) filters.itemId = parseInt(itemId);
  if (fromDate) filters.fromDate = fromDate;
  if (toDate) filters.toDate = toDate;

  counts = await assetService.getPhysicalCounts(filters);
  items = await assetService.getInventoryItems({ isActive: true });
} catch (error) {
  console.error('Error loading physical counts:', error);
}

// Calculate totals
const totalVariance = counts.reduce((sum, c) => sum + (c.physicalQuantity - c.systemQuantity), 0);
const totalVarianceValue = counts.reduce((sum, c) => sum + c.varianceValue, 0);
---

<MainLayout title="Physical Inventory Count">
  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Physical Inventory Count</h1>
        <p class="mt-1 text-sm text-gray-600">
          Record and verify actual stock quantities
        </p>
      </div>
      <a
        href="/inventory/physical-count/create"
        class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
      >
        <i class="pi pi-plus mr-2"></i>
        New Physical Count
      </a>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6">
      <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <label for="itemId" class="block text-sm font-medium text-gray-700 mb-1">
            Filter by Item
          </label>
          <select
            id="itemId"
            name="itemId"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          >
            <option value="">All Items</option>
            {items.map((item: any) => (
              <option value={item.id} selected={itemId === item.id.toString()}>
                {item.itemCode} - {item.itemName}
              </option>
            ))}
          </select>
        </div>

        <div>
          <label for="fromDate" class="block text-sm font-medium text-gray-700 mb-1">
            From Date
          </label>
          <input
            type="date"
            id="fromDate"
            name="fromDate"
            value={fromDate || ''}
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          />
        </div>

        <div>
          <label for="toDate" class="block text-sm font-medium text-gray-700 mb-1">
            To Date
          </label>
          <input
            type="date"
            id="toDate"
            name="toDate"
            value={toDate || ''}
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          />
        </div>

        <div class="flex items-end">
          <button
            type="submit"
            class="w-full px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 font-medium"
          >
            Apply Filters
          </button>
        </div>
      </form>
    </div>

    <!-- Physical Counts Table -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
      {counts.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Count No.
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Date
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Item
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  System Qty
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Physical Qty
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Variance
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Variance Value
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Counted By
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {counts.map((count: any) => {
                const variance = count.physicalQuantity - count.systemQuantity;
                const hasVariance = variance !== 0;
                return (
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      {count.countNo}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {new Date(count.countDate).toLocaleDateString()}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                      {count.item ? (
                        <div>
                          <div class="font-medium">{count.item.itemCode}</div>
                          <div class="text-xs text-gray-500">{count.item.itemName}</div>
                        </div>
                      ) : '-'}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                      {count.systemQuantity} {count.item?.unit}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium text-gray-900">
                      {count.physicalQuantity} {count.item?.unit}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
                      <span class={hasVariance ? (variance > 0 ? 'text-green-600 font-semibold' : 'text-red-600 font-semibold') : 'text-gray-500'}>
                        {variance > 0 ? '+' : ''}{variance} {count.item?.unit}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
                      <span class={hasVariance ? (count.varianceValue > 0 ? 'text-green-600 font-semibold' : 'text-red-600 font-semibold') : 'text-gray-500'}>
                        {count.varianceValue > 0 ? '+' : ''}₱{Math.abs(count.varianceValue).toLocaleString()}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {count.countedBy || '-'}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <a
                        href={`/inventory/physical-count/${count.id}`}
                        class="text-primary-600 hover:text-primary-900"
                      >
                        View
                      </a>
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      ) : (
        <div class="px-6 py-12 text-center">
          <i class="pi pi-inbox text-gray-400 text-4xl mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No physical counts found</h3>
          <p class="text-gray-500 mb-4">
            {itemId || fromDate || toDate
              ? 'No physical counts match your filters.'
              : 'Start by recording your first physical inventory count.'}
          </p>
          <a
            href="/inventory/physical-count/create"
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
          >
            <i class="pi pi-plus mr-2"></i>
            New Physical Count
          </a>
        </div>
      )}
    </div>

    <!-- Summary Cards -->
    {counts.length > 0 && (
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mt-6">
        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="flex items-center">
            <div class="p-3 bg-blue-100 rounded-full">
              <i class="pi pi-list text-blue-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Counts</p>
              <p class="text-2xl font-bold text-gray-900">{counts.length}</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="flex items-center">
            <div class="p-3 bg-green-100 rounded-full">
              <i class="pi pi-check-circle text-green-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Accurate Counts</p>
              <p class="text-2xl font-bold text-gray-900">
                {counts.filter(c => c.physicalQuantity === c.systemQuantity).length}
              </p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="flex items-center">
            <div class={`p-3 rounded-full ${totalVariance >= 0 ? 'bg-green-100' : 'bg-red-100'}`}>
              <i class={`pi ${totalVariance >= 0 ? 'pi-arrow-up' : 'pi-arrow-down'} text-xl ${totalVariance >= 0 ? 'text-green-600' : 'text-red-600'}`}></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Variance</p>
              <p class={`text-2xl font-bold ${totalVariance >= 0 ? 'text-green-600' : 'text-red-600'}`}>
                {totalVariance >= 0 ? '+' : ''}{totalVariance}
              </p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="flex items-center">
            <div class={`p-3 rounded-full ${totalVarianceValue >= 0 ? 'bg-green-100' : 'bg-red-100'}`}>
              <i class={`pi pi-dollar text-xl ${totalVarianceValue >= 0 ? 'text-green-600' : 'text-red-600'}`}></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Variance Value</p>
              <p class={`text-2xl font-bold ${totalVarianceValue >= 0 ? 'text-green-600' : 'text-red-600'}`}>
                {totalVarianceValue >= 0 ? '+' : ''}₱{Math.abs(totalVarianceValue).toLocaleString()}
              </p>
            </div>
          </div>
        </div>
      </div>
    )}
  </div>
</MainLayout>
