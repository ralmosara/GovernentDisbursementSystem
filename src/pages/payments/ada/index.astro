---
import MainLayout from '../../../layouts/MainLayout.astro';
import { paymentService } from '../../../lib/services/payment.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get query parameters
const status = Astro.url.searchParams.get('status') || 'pending';
const fiscalYear = Astro.url.searchParams.get('fiscalYear')
  ? parseInt(Astro.url.searchParams.get('fiscalYear')!)
  : new Date().getFullYear();

// Get ADA payments only
const payments = await paymentService.getPayments({
  status: status as any,
  fiscalYear,
  paymentType: ['ada'],
});

// Get statistics for ADA only
const allADAPayments = await paymentService.getPayments({
  fiscalYear,
  paymentType: ['ada'],
});

const stats = {
  pending: allADAPayments.filter(p => p.status === 'pending').length,
  issued: allADAPayments.filter(p => p.status === 'issued').length,
  cleared: allADAPayments.filter(p => p.status === 'cleared').length,
  cancelled: allADAPayments.filter(p => p.status === 'cancelled').length,
  totalAmount: allADAPayments
    .filter(p => p.status !== 'cancelled')
    .reduce((sum, p) => sum + parseFloat(p.amount.toString()), 0),
};

// Format date
const formatDate = (date: Date | string | null) => {
  if (!date) return 'N/A';
  const d = typeof date === 'string' ? new Date(date) : date;
  return d.toLocaleDateString('en-PH', { year: 'numeric', month: 'short', day: 'numeric' });
};

// Payment status badge
const getStatusBadge = (status: string) => {
  switch (status) {
    case 'pending': return 'badge-warning';
    case 'issued': return 'badge-info';
    case 'cleared': return 'badge-success';
    case 'cancelled': return 'badge-secondary';
    default: return 'badge-secondary';
  }
};
---

<MainLayout title="ADA Payments">
  <div class="container-fluid py-6">
    <!-- Page Header -->
    <div class="page-header">
      <div>
        <h1 class="page-title">ADA Payments</h1>
        <p class="page-description">Manage Advice to Debit Account (ADA) payments</p>
      </div>
      <div class="flex gap-2">
        <a href="/payments" class="btn btn-ghost">
          <i class="pi pi-arrow-left mr-2"></i>
          All Payments
        </a>
        <a href="/payments/create" class="btn btn-primary">
          <i class="pi pi-plus mr-2"></i>
          Create Payment
        </a>
      </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-6">
      <div class="card">
        <div class="card-body">
          <p class="text-sm text-gray-600">Pending</p>
          <p class="text-3xl font-bold text-warning-600 mt-1">{stats.pending}</p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <p class="text-sm text-gray-600">Issued</p>
          <p class="text-3xl font-bold text-info-600 mt-1">{stats.issued}</p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <p class="text-sm text-gray-600">Cleared</p>
          <p class="text-3xl font-bold text-success-600 mt-1">{stats.cleared}</p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <p class="text-sm text-gray-600">Cancelled</p>
          <p class="text-3xl font-bold text-secondary-600 mt-1">{stats.cancelled}</p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <p class="text-sm text-gray-600">Total Amount</p>
          <p class="text-2xl font-bold text-gray-900 mt-1">₱{stats.totalAmount.toLocaleString('en-PH', { minimumFractionDigits: 2 })}</p>
        </div>
      </div>
    </div>

    <!-- Status Tabs -->
    <div class="card mb-6">
      <div class="card-body">
        <div class="flex gap-2 flex-wrap">
          <a href="?status=pending" class={`btn ${status === 'pending' ? 'btn-primary' : 'btn-ghost'}`}>
            Pending ({stats.pending})
          </a>
          <a href="?status=issued" class={`btn ${status === 'issued' ? 'btn-primary' : 'btn-ghost'}`}>
            Issued ({stats.issued})
          </a>
          <a href="?status=cleared" class={`btn ${status === 'cleared' ? 'btn-primary' : 'btn-ghost'}`}>
            Cleared ({stats.cleared})
          </a>
          <a href="?status=cancelled" class={`btn ${status === 'cancelled' ? 'btn-primary' : 'btn-ghost'}`}>
            Cancelled ({stats.cancelled})
          </a>
        </div>
      </div>
    </div>

    <!-- ADA Table -->
    {payments.length === 0 ? (
      <div class="card">
        <div class="card-body">
          <div class="text-center py-12">
            <i class="pi pi-inbox text-6xl text-gray-300 mb-4"></i>
            <p class="text-gray-500 text-lg">No {status} ADA payments found</p>
            <a href="/payments/create" class="btn btn-primary mt-4">
              <i class="pi pi-plus mr-2"></i>
              Create ADA Payment
            </a>
          </div>
        </div>
      </div>
    ) : (
      <div class="card">
        <div class="card-header">
          <h3 class="text-lg font-semibold text-gray-900">
            {status.charAt(0).toUpperCase() + status.slice(1)} ADA Payments ({payments.length})
          </h3>
        </div>
        <div class="card-body p-0">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ADA Reference</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">DV No</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Payment Date</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Issue Date</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Payee</th>
                  <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Amount</th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Status</th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                {payments.map(payment => (
                  <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="font-semibold text-primary-600">{payment.adaReference || 'N/A'}</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <a href={`/disbursements/${payment.dvId}`} class="text-primary-600 hover:text-primary-800">
                        {payment.dvNo}
                      </a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      {formatDate(payment.paymentDate)}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                      {formatDate(payment.adaIssuedDate)}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                      <div class="max-w-xs truncate" title={payment.payeeName}>
                        {payment.payeeName}
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900 text-right">
                      ₱{parseFloat(payment.amount.toString()).toLocaleString('en-PH', { minimumFractionDigits: 2 })}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                      <span class={`badge ${getStatusBadge(payment.status)}`}>
                        {payment.status.charAt(0).toUpperCase() + payment.status.slice(1)}
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                      <div class="flex items-center justify-center gap-2">
                        {payment.status === 'pending' && (
                          <button
                            class="btn btn-success btn-sm"
                            onclick={`issuePayment(${payment.id})`}
                          >
                            <i class="pi pi-check mr-1"></i>
                            Issue
                          </button>
                        )}
                        {payment.status === 'issued' && (
                          <button
                            class="btn btn-primary btn-sm"
                            onclick={`clearPayment(${payment.id})`}
                          >
                            <i class="pi pi-check-circle mr-1"></i>
                            Clear
                          </button>
                        )}
                        {(payment.status === 'pending' || payment.status === 'issued') && (
                          <button
                            class="btn btn-error btn-sm"
                            onclick={`cancelPayment(${payment.id})`}
                          >
                            <i class="pi pi-times mr-1"></i>
                            Cancel
                          </button>
                        )}
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    )}

    <!-- Info Box -->
    <div class="card mt-6 bg-blue-50 border-blue-200">
      <div class="card-body">
        <div class="flex items-start gap-3">
          <i class="pi pi-info-circle text-2xl text-blue-600"></i>
          <div>
            <h4 class="font-semibold text-blue-900 mb-2">About ADA Payments</h4>
            <p class="text-sm text-blue-800">
              An <strong>Advice to Debit Account (ADA)</strong> is a payment instruction to the bank to debit the government agency's account
              and credit the payee's account. ADA is commonly used for:
            </p>
            <ul class="text-sm text-blue-800 mt-2 ml-4 space-y-1">
              <li>• Large-value payments to avoid physical check handling</li>
              <li>• Recurring payments (salaries, utilities, rentals)</li>
              <li>• Electronic fund transfers to supplier bank accounts</li>
              <li>• Tax remittances to Bureau of Internal Revenue (BIR)</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script is:inline>
    window.issuePayment = async function(paymentId) {
      const receivedBy = prompt('Received by (name):');
      if (!receivedBy) return;

      const confirmed = confirm(`Issue ADA to ${receivedBy}?`);
      if (!confirmed) return;

      try {
        const response = await fetch(`/api/payments/${paymentId}/issue`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            receivedBy,
            receivedDate: new Date().toISOString(),
          }),
        });

        const data = await response.json();

        if (response.ok) {
          alert(data.message);
          window.location.reload();
        } else {
          alert('Error: ' + data.message);
        }
      } catch (error) {
        console.error('Error issuing payment:', error);
        alert('Failed to issue payment');
      }
    };

    window.clearPayment = async function(paymentId) {
      const confirmed = confirm('Mark this ADA as cleared?');
      if (!confirmed) return;

      try {
        const response = await fetch(`/api/payments/${paymentId}/clear`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            clearDate: new Date().toISOString(),
          }),
        });

        const data = await response.json();

        if (response.ok) {
          alert(data.message);
          window.location.reload();
        } else {
          alert('Error: ' + data.message);
        }
      } catch (error) {
        console.error('Error clearing payment:', error);
        alert('Failed to clear payment');
      }
    };

    window.cancelPayment = async function(paymentId) {
      const reason = prompt('Reason for cancellation:');
      if (!reason) return;

      const confirmed = confirm('Cancel this ADA payment?');
      if (!confirmed) return;

      try {
        const response = await fetch(`/api/payments/${paymentId}/cancel`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ reason }),
        });

        const data = await response.json();

        if (response.ok) {
          alert(data.message);
          window.location.reload();
        } else {
          alert('Error: ' + data.message);
        }
      } catch (error) {
        console.error('Error cancelling payment:', error);
        alert('Failed to cancel payment');
      }
    };
  </script>
</MainLayout>
