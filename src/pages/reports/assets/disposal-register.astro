---
import MainLayout from '../../../layouts/MainLayout.astro';
import { assetService } from '../../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get query parameters
const url = new URL(Astro.request.url);
const fromDate = url.searchParams.get('fromDate');
const toDate = url.searchParams.get('toDate');
const disposalMethod = url.searchParams.get('disposalMethod');

// Fetch disposals
let disposals: any[] = [];
try {
  const filters: any = {};
  if (fromDate) filters.fromDate = fromDate;
  if (toDate) filters.toDate = toDate;
  if (disposalMethod) filters.disposalMethod = disposalMethod;

  disposals = await assetService.getDisposals(filters);
} catch (error) {
  console.error('Error loading disposals:', error);
}

// Get unique disposal methods
const disposalMethods = [...new Set(disposals.map(d => d.disposalMethod).filter(Boolean))];

// Calculate totals
const totalBookValue = disposals.reduce((sum, d) => sum + parseFloat(d.bookValue || '0'), 0);
const totalDisposalValue = disposals.reduce((sum, d) => sum + parseFloat(d.disposalValue || '0'), 0);
const totalGainLoss = totalDisposalValue - totalBookValue;

function formatCurrency(value: number): string {
  return value.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
}
---

<MainLayout title="Disposal Register">
  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Asset Disposal Register</h1>
        <p class="mt-1 text-sm text-gray-600">
          Record of disposed assets
        </p>
      </div>
      <button
        onclick="window.print()"
        class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
      >
        <i class="pi pi-print mr-2"></i>
        Print Report
      </button>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6 no-print">
      <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <label for="fromDate" class="block text-sm font-medium text-gray-700 mb-1">
            From Date
          </label>
          <input
            type="date"
            id="fromDate"
            name="fromDate"
            value={fromDate || ''}
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          />
        </div>

        <div>
          <label for="toDate" class="block text-sm font-medium text-gray-700 mb-1">
            To Date
          </label>
          <input
            type="date"
            id="toDate"
            name="toDate"
            value={toDate || ''}
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          />
        </div>

        <div>
          <label for="disposalMethod" class="block text-sm font-medium text-gray-700 mb-1">
            Disposal Method
          </label>
          <select
            id="disposalMethod"
            name="disposalMethod"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          >
            <option value="">All Methods</option>
            {disposalMethods.map((method: string) => (
              <option value={method} selected={disposalMethod === method}>{method}</option>
            ))}
          </select>
        </div>

        <div class="flex items-end">
          <button
            type="submit"
            class="w-full px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 font-medium"
          >
            Apply Filters
          </button>
        </div>
      </form>
    </div>

    <!-- Report Summary -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6 no-print">
      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-red-100 rounded-full">
            <i class="pi pi-trash text-red-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Disposals</p>
            <p class="text-2xl font-bold text-gray-900">{disposals.length}</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 rounded-full">
            <i class="pi pi-book text-blue-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Book Value</p>
            <p class="text-2xl font-bold text-gray-900">₱{formatCurrency(totalBookValue)}</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-green-100 rounded-full">
            <i class="pi pi-dollar text-green-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Disposal Value</p>
            <p class="text-2xl font-bold text-gray-900">₱{formatCurrency(totalDisposalValue)}</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class={`p-3 rounded-full ${totalGainLoss >= 0 ? 'bg-green-100' : 'bg-red-100'}`}>
            <i class={`pi ${totalGainLoss >= 0 ? 'pi-arrow-up' : 'pi-arrow-down'} text-xl ${totalGainLoss >= 0 ? 'text-green-600' : 'text-red-600'}`}></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Net Gain/(Loss)</p>
            <p class={`text-2xl font-bold ${totalGainLoss >= 0 ? 'text-green-600' : 'text-red-600'}`}>
              ₱{formatCurrency(Math.abs(totalGainLoss))}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Disposals Table -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
      {disposals.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Disposal No.
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Date
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Asset
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Method
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Book Value
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Disposal Value
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Gain/(Loss)
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Approved By
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {disposals.map((disposal: any) => {
                const bookValue = parseFloat(disposal.bookValue || '0');
                const disposalValue = parseFloat(disposal.disposalValue || '0');
                const gainLoss = disposalValue - bookValue;

                return (
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">
                      {disposal.disposalNo}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                      {new Date(disposal.disposalDate).toLocaleDateString()}
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-900">
                      {disposal.asset ? (
                        <div>
                          <div class="font-medium">{disposal.asset.assetNo}</div>
                          <div class="text-xs text-gray-500">{disposal.asset.assetName}</div>
                        </div>
                      ) : '-'}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                      {disposal.disposalMethod || '-'}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-900">
                      ₱{formatCurrency(bookValue)}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-900">
                      ₱{formatCurrency(disposalValue)}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right">
                      <span class={gainLoss >= 0 ? 'text-green-600 font-semibold' : 'text-red-600 font-semibold'}>
                        {gainLoss >= 0 ? '+' : ''}₱{formatCurrency(Math.abs(gainLoss))}
                      </span>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                      {disposal.approvedBy || '-'}
                    </td>
                  </tr>
                );
              })}
            </tbody>
            <tfoot class="bg-gray-50">
              <tr>
                <td colspan="4" class="px-4 py-3 text-sm font-bold text-gray-900 text-right">
                  TOTAL:
                </td>
                <td class="px-4 py-3 text-sm font-bold text-gray-900 text-right">
                  ₱{formatCurrency(totalBookValue)}
                </td>
                <td class="px-4 py-3 text-sm font-bold text-gray-900 text-right">
                  ₱{formatCurrency(totalDisposalValue)}
                </td>
                <td class="px-4 py-3 text-sm font-bold text-right">
                  <span class={totalGainLoss >= 0 ? 'text-green-600' : 'text-red-600'}>
                    {totalGainLoss >= 0 ? '+' : ''}₱{formatCurrency(Math.abs(totalGainLoss))}
                  </span>
                </td>
                <td></td>
              </tr>
            </tfoot>
          </table>
        </div>
      ) : (
        <div class="px-6 py-12 text-center">
          <i class="pi pi-inbox text-gray-400 text-4xl mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No disposals found</h3>
          <p class="text-gray-500">
            {fromDate || toDate || disposalMethod
              ? 'No disposals match your filter criteria.'
              : 'No asset disposals have been recorded yet.'}
          </p>
        </div>
      )}
    </div>
  </div>
</MainLayout>

<style>
  @media print {
    .no-print {
      display: none !important;
    }

    body {
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }
  }
</style>
