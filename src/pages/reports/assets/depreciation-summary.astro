---
import MainLayout from '../../../layouts/MainLayout.astro';
import { assetService } from '../../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get query parameters
const url = new URL(Astro.request.url);
const category = url.searchParams.get('category');
const year = url.searchParams.get('year') || new Date().getFullYear().toString();

// Fetch assets with depreciation
let assets: any[] = [];
try {
  const filters: any = { isActive: true };
  if (category) filters.category = category;

  assets = await assetService.getFixedAssets(filters);
} catch (error) {
  console.error('Error loading assets:', error);
}

// Get unique categories
const categories = [...new Set(assets.map(a => a.category).filter(Boolean))];

// Calculate totals
const totalAcquisitionCost = assets.reduce((sum, a) => sum + parseFloat(a.acquisitionCost), 0);
const totalSalvageValue = assets.reduce((sum, a) => sum + parseFloat(a.salvageValue || '0'), 0);
const totalDepreciableAmount = totalAcquisitionCost - totalSalvageValue;

function formatCurrency(value: number): string {
  return value.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
}
---

<MainLayout title="Depreciation Summary Report">
  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Depreciation Summary Report</h1>
        <p class="mt-1 text-sm text-gray-600">
          Summary of asset depreciation for year {year}
        </p>
      </div>
      <button
        onclick="window.print()"
        class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
      >
        <i class="pi pi-print mr-2"></i>
        Print Report
      </button>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6 no-print">
      <form method="GET" class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label for="year" class="block text-sm font-medium text-gray-700 mb-1">
            Year
          </label>
          <input
            type="number"
            id="year"
            name="year"
            value={year}
            min="2000"
            max="2099"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          />
        </div>

        <div>
          <label for="category" class="block text-sm font-medium text-gray-700 mb-1">
            Category
          </label>
          <select
            id="category"
            name="category"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          >
            <option value="">All Categories</option>
            {categories.map((cat: string) => (
              <option value={cat} selected={category === cat}>{cat}</option>
            ))}
          </select>
        </div>

        <div class="flex items-end">
          <button
            type="submit"
            class="w-full px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 font-medium"
          >
            Generate Report
          </button>
        </div>
      </form>
    </div>

    <!-- Report Summary -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6 no-print">
      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 rounded-full">
            <i class="pi pi-dollar text-blue-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Acquisition Cost</p>
            <p class="text-2xl font-bold text-gray-900">₱{formatCurrency(totalAcquisitionCost)}</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-gray-100 rounded-full">
            <i class="pi pi-tag text-gray-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Salvage Value</p>
            <p class="text-2xl font-bold text-gray-900">₱{formatCurrency(totalSalvageValue)}</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-orange-100 rounded-full">
            <i class="pi pi-chart-line text-orange-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Depreciable Amount</p>
            <p class="text-2xl font-bold text-gray-900">₱{formatCurrency(totalDepreciableAmount)}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Depreciation Table -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
      {assets.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Asset No.
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Asset Name
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Category
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Method
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Acquisition Cost
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Salvage Value
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Depreciable Amount
                </th>
                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Useful Life
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Annual Rate
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {assets.map((asset: any) => {
                const acquisitionCost = parseFloat(asset.acquisitionCost);
                const salvageValue = parseFloat(asset.salvageValue || '0');
                const depreciableAmount = acquisitionCost - salvageValue;
                const usefulLife = parseInt(asset.usefulLife || '0');
                const annualRate = usefulLife > 0 ? (100 / usefulLife) : 0;

                return (
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">
                      {asset.assetNo}
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-900">
                      {asset.assetName}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                      {asset.category || '-'}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                      {asset.depreciationMethod === 'straight-line' ? 'Straight Line' :
                       asset.depreciationMethod === 'declining-balance' ? 'Declining Balance' : '-'}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-900">
                      ₱{formatCurrency(acquisitionCost)}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-500">
                      ₱{formatCurrency(salvageValue)}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right font-medium text-gray-900">
                      ₱{formatCurrency(depreciableAmount)}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-center text-gray-500">
                      {usefulLife} years
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-500">
                      {annualRate.toFixed(2)}%
                    </td>
                  </tr>
                );
              })}
            </tbody>
            <tfoot class="bg-gray-50">
              <tr>
                <td colspan="4" class="px-4 py-3 text-sm font-bold text-gray-900 text-right">
                  TOTAL:
                </td>
                <td class="px-4 py-3 text-sm font-bold text-gray-900 text-right">
                  ₱{formatCurrency(totalAcquisitionCost)}
                </td>
                <td class="px-4 py-3 text-sm font-bold text-gray-900 text-right">
                  ₱{formatCurrency(totalSalvageValue)}
                </td>
                <td class="px-4 py-3 text-sm font-bold text-gray-900 text-right">
                  ₱{formatCurrency(totalDepreciableAmount)}
                </td>
                <td colspan="2"></td>
              </tr>
            </tfoot>
          </table>
        </div>
      ) : (
        <div class="px-6 py-12 text-center">
          <i class="pi pi-inbox text-gray-400 text-4xl mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No assets found</h3>
          <p class="text-gray-500">
            No assets match your filter criteria.
          </p>
        </div>
      )}
    </div>
  </div>
</MainLayout>

<style>
  @media print {
    .no-print {
      display: none !important;
    }

    body {
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }
  }
</style>
