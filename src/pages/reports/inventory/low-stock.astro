---
import MainLayout from '../../../layouts/MainLayout.astro';
import { assetService } from '../../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get query parameters
const url = new URL(Astro.request.url);
const category = url.searchParams.get('category');

// Fetch low stock items
let lowStockItems: any[] = [];
try {
  lowStockItems = await assetService.getLowStockItems();

  // Filter by category if specified
  if (category) {
    lowStockItems = lowStockItems.filter(item => item.category === category);
  }
} catch (error) {
  console.error('Error loading low stock items:', error);
}

// Get unique categories
const categories = [...new Set(lowStockItems.map(i => i.category).filter(Boolean))];

// Calculate statistics
const outOfStock = lowStockItems.filter(i => i.stockStatus === 'out').length;
const criticallyLow = lowStockItems.filter(i => i.stockStatus === 'low').length;
const totalValue = lowStockItems.reduce((sum, i) => sum + (i.quantityOnHand * parseFloat(i.unitCost)), 0);

function formatCurrency(value: number): string {
  return value.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
}
---

<MainLayout title="Low Stock Report">
  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Low Stock Report</h1>
        <p class="mt-1 text-sm text-gray-600">
          Items below minimum stock levels requiring reorder
        </p>
      </div>
      <button
        onclick="window.print()"
        class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
      >
        <i class="pi pi-print mr-2"></i>
        Print Report
      </button>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6 no-print">
      <form method="GET" class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="category" class="block text-sm font-medium text-gray-700 mb-1">
            Filter by Category
          </label>
          <select
            id="category"
            name="category"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          >
            <option value="">All Categories</option>
            {categories.map((cat: string) => (
              <option value={cat} selected={category === cat}>{cat}</option>
            ))}
          </select>
        </div>

        <div class="flex items-end">
          <button
            type="submit"
            class="w-full px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 font-medium"
          >
            Apply Filter
          </button>
        </div>
      </form>
    </div>

    <!-- Report Summary -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6 no-print">
      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-red-100 rounded-full">
            <i class="pi pi-times-circle text-red-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Out of Stock</p>
            <p class="text-2xl font-bold text-red-600">{outOfStock}</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-orange-100 rounded-full">
            <i class="pi pi-exclamation-triangle text-orange-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Critically Low</p>
            <p class="text-2xl font-bold text-orange-600">{criticallyLow}</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 rounded-full">
            <i class="pi pi-dollar text-blue-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Stock Value</p>
            <p class="text-2xl font-bold text-gray-900">₱{formatCurrency(totalValue)}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Low Stock Table -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
      {lowStockItems.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Item Code
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Item Name
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Category
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  On Hand
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Minimum Level
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Reorder Qty
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Unit Cost
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Est. Reorder Cost
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {lowStockItems.map((item: any) => {
                const onHand = item.quantityOnHand;
                const minLevel = item.minimumLevel;
                const maxLevel = item.maximumLevel || (minLevel * 2);
                const reorderQty = maxLevel - onHand;
                const unitCost = parseFloat(item.unitCost);
                const reorderCost = reorderQty * unitCost;

                return (
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">
                      {item.itemCode}
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-900">
                      {item.itemName}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                      {item.category || '-'}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right">
                      <span class={`font-bold ${item.stockStatus === 'out' ? 'text-red-600' : 'text-orange-600'}`}>
                        {onHand} {item.unit}
                      </span>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-500">
                      {minLevel} {item.unit}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right font-medium text-primary-600">
                      {reorderQty} {item.unit}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-500">
                      ₱{formatCurrency(unitCost)}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right font-bold text-gray-900">
                      ₱{formatCurrency(reorderCost)}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm">
                      <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                        item.stockStatus === 'out' ? 'bg-red-100 text-red-800' : 'bg-orange-100 text-orange-800'
                      }`}>
                        {item.stockStatus === 'out' ? 'Out of Stock' : 'Low Stock'}
                      </span>
                    </td>
                  </tr>
                );
              })}
            </tbody>
            <tfoot class="bg-gray-50">
              <tr>
                <td colspan="7" class="px-4 py-3 text-sm font-bold text-gray-900 text-right">
                  TOTAL ESTIMATED REORDER COST:
                </td>
                <td class="px-4 py-3 text-sm font-bold text-primary-600 text-right">
                  ₱{formatCurrency(lowStockItems.reduce((sum, item) => {
                    const onHand = item.quantityOnHand;
                    const minLevel = item.minimumLevel;
                    const maxLevel = item.maximumLevel || (minLevel * 2);
                    const reorderQty = maxLevel - onHand;
                    const unitCost = parseFloat(item.unitCost);
                    return sum + (reorderQty * unitCost);
                  }, 0))}
                </td>
                <td></td>
              </tr>
            </tfoot>
          </table>
        </div>
      ) : (
        <div class="px-6 py-12 text-center">
          <i class="pi pi-check-circle text-green-400 text-5xl mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">All Stock Levels Adequate</h3>
          <p class="text-gray-500">
            {category
              ? 'No items in this category are below minimum stock levels.'
              : 'All inventory items are at or above their minimum stock levels.'}
          </p>
        </div>
      )}
    </div>

    {lowStockItems.length > 0 && (
      <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <i class="pi pi-info-circle text-yellow-600 text-xl"></i>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Action Required</h3>
            <p class="mt-1 text-sm text-yellow-700">
              The items listed above require immediate attention. Please review and initiate purchase requests
              to replenish stock levels to prevent stockouts and ensure continuous operations.
            </p>
          </div>
        </div>
      </div>
    )}
  </div>
</MainLayout>

<style>
  @media print {
    .no-print {
      display: none !important;
    }

    body {
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }
  }
</style>
