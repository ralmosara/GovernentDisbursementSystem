---
import MainLayout from '../../../layouts/MainLayout.astro';
import { assetService } from '../../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get query parameters
const url = new URL(Astro.request.url);
const category = url.searchParams.get('category');
const asOfDate = url.searchParams.get('asOfDate') || new Date().toISOString().split('T')[0];

// Fetch inventory items
let items: any[] = [];
try {
  const filters: any = { isActive: true };
  if (category) filters.category = category;

  items = await assetService.getInventoryItems(filters);
} catch (error) {
  console.error('Error loading inventory items:', error);
}

// Get unique categories
const categories = [...new Set(items.map(i => i.category).filter(Boolean))];

// Calculate totals
const totalQuantity = items.reduce((sum, i) => sum + i.quantityOnHand, 0);
const totalValue = items.reduce((sum, i) => sum + (i.quantityOnHand * parseFloat(i.unitCost)), 0);

// Group by category
const categoryGroups: Record<string, any[]> = {};
items.forEach(item => {
  const cat = item.category || 'Uncategorized';
  if (!categoryGroups[cat]) {
    categoryGroups[cat] = [];
  }
  categoryGroups[cat].push(item);
});

function formatCurrency(value: number): string {
  return value.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
}
---

<MainLayout title="Inventory Valuation Report">
  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Inventory Valuation Report</h1>
        <p class="mt-1 text-sm text-gray-600">
          Total value of inventory as of {new Date(asOfDate).toLocaleDateString()}
        </p>
      </div>
      <button
        onclick="window.print()"
        class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
      >
        <i class="pi pi-print mr-2"></i>
        Print Report
      </button>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6 no-print">
      <form method="GET" class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label for="asOfDate" class="block text-sm font-medium text-gray-700 mb-1">
            As of Date
          </label>
          <input
            type="date"
            id="asOfDate"
            name="asOfDate"
            value={asOfDate}
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          />
        </div>

        <div>
          <label for="category" class="block text-sm font-medium text-gray-700 mb-1">
            Category
          </label>
          <select
            id="category"
            name="category"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          >
            <option value="">All Categories</option>
            {categories.map((cat: string) => (
              <option value={cat} selected={category === cat}>{cat}</option>
            ))}
          </select>
        </div>

        <div class="flex items-end">
          <button
            type="submit"
            class="w-full px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 font-medium"
          >
            Generate Report
          </button>
        </div>
      </form>
    </div>

    <!-- Report Summary -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6 no-print">
      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 rounded-full">
            <i class="pi pi-box text-blue-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Items</p>
            <p class="text-2xl font-bold text-gray-900">{items.length}</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-purple-100 rounded-full">
            <i class="pi pi-database text-purple-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Quantity</p>
            <p class="text-2xl font-bold text-gray-900">{totalQuantity.toLocaleString()}</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-green-100 rounded-full">
            <i class="pi pi-dollar text-green-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Valuation</p>
            <p class="text-2xl font-bold text-green-600">₱{formatCurrency(totalValue)}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Valuation by Category -->
    {Object.keys(categoryGroups).length > 0 && !category && (
      <div class="bg-white rounded-lg shadow border border-gray-200 p-6 mb-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Valuation by Category</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {Object.entries(categoryGroups).map(([cat, catItems]) => {
            const catValue = catItems.reduce((sum, i) => sum + (i.quantityOnHand * parseFloat(i.unitCost)), 0);
            const percentage = totalValue > 0 ? (catValue / totalValue) * 100 : 0;

            return (
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <div class="flex justify-between items-start mb-2">
                  <h3 class="font-medium text-gray-900">{cat}</h3>
                  <span class="text-xs text-gray-500">{catItems.length} items</span>
                </div>
                <p class="text-2xl font-bold text-primary-600">₱{formatCurrency(catValue)}</p>
                <div class="mt-2 w-full bg-gray-200 rounded-full h-2">
                  <div
                    class="bg-primary-600 h-2 rounded-full"
                    style={`width: ${percentage}%`}
                  ></div>
                </div>
                <p class="text-xs text-gray-500 mt-1">{percentage.toFixed(1)}% of total</p>
              </div>
            );
          })}
        </div>
      </div>
    )}

    <!-- Inventory Valuation Table -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
      {items.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Item Code
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Item Name
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Category
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Quantity on Hand
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Unit Cost
                </th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Total Value
                </th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Stock Status
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {items.map((item: any) => {
                const itemValue = item.quantityOnHand * parseFloat(item.unitCost);

                return (
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">
                      {item.itemCode}
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-900">
                      {item.itemName}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                      {item.category || '-'}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-900">
                      {item.quantityOnHand} {item.unit}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-500">
                      ₱{formatCurrency(parseFloat(item.unitCost))}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-right font-bold text-gray-900">
                      ₱{formatCurrency(itemValue)}
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm">
                      <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                        item.stockStatus === 'adequate' ? 'bg-green-100 text-green-800' :
                        item.stockStatus === 'low' ? 'bg-orange-100 text-orange-800' :
                        item.stockStatus === 'out' ? 'bg-red-100 text-red-800' :
                        'bg-blue-100 text-blue-800'
                      }`}>
                        {item.stockStatus}
                      </span>
                    </td>
                  </tr>
                );
              })}
            </tbody>
            <tfoot class="bg-gray-50">
              <tr>
                <td colspan="3" class="px-4 py-3 text-sm font-bold text-gray-900 text-right">
                  TOTAL INVENTORY VALUE:
                </td>
                <td class="px-4 py-3 text-sm font-bold text-gray-900 text-right">
                  {totalQuantity.toLocaleString()}
                </td>
                <td></td>
                <td class="px-4 py-3 text-sm font-bold text-green-600 text-right text-lg">
                  ₱{formatCurrency(totalValue)}
                </td>
                <td></td>
              </tr>
            </tfoot>
          </table>
        </div>
      ) : (
        <div class="px-6 py-12 text-center">
          <i class="pi pi-inbox text-gray-400 text-4xl mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No inventory items found</h3>
          <p class="text-gray-500">
            {category
              ? 'No items found in this category.'
              : 'No inventory items to display.'}
          </p>
        </div>
      )}
    </div>

    {items.length > 0 && (
      <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <i class="pi pi-info-circle text-blue-600 text-xl"></i>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800">Valuation Method</h3>
            <p class="mt-1 text-sm text-blue-700">
              This report uses the weighted average cost method for inventory valuation.
              Values are calculated based on the unit cost and quantity on hand as of {new Date(asOfDate).toLocaleDateString()}.
            </p>
          </div>
        </div>
      </div>
    )}
  </div>
</MainLayout>

<style>
  @media print {
    .no-print {
      display: none !important;
    }

    body {
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }
  }
</style>
