---
import MainLayout from '../../../layouts/MainLayout.astro';
import { assetService } from '../../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get query parameters
const url = new URL(Astro.request.url);
const itemId = url.searchParams.get('itemId');
const fromDate = url.searchParams.get('fromDate');
const toDate = url.searchParams.get('toDate');

// Fetch items for selection
let items: any[] = [];
let selectedItem: any = null;
let transactions: any[] = [];

try {
  items = await assetService.getInventoryItems({ isActive: true });

  if (itemId) {
    selectedItem = await assetService.getInventoryItemById(parseInt(itemId));

    const filters: any = { itemId: parseInt(itemId) };
    if (fromDate) filters.fromDate = fromDate;
    if (toDate) filters.toDate = toDate;

    transactions = await assetService.getInventoryTransactions(filters);
  }
} catch (error) {
  console.error('Error loading stock card data:', error);
}

// Calculate running balance
let runningBalance = selectedItem?.quantityOnHand || 0;
if (transactions.length > 0) {
  // Start from the oldest transaction and calculate forward
  runningBalance = 0;
  transactions.reverse(); // Oldest first
}

function formatCurrency(value: number): string {
  return value.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
}
---

<MainLayout title="Stock Card Report">
  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Stock Card</h1>
        <p class="mt-1 text-sm text-gray-600">
          Detailed transaction history per inventory item
        </p>
      </div>
      {selectedItem && (
        <button
          onclick="window.print()"
          class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
        >
          <i class="pi pi-print mr-2"></i>
          Print Card
        </button>
      )}
    </div>

    <!-- Item Selection & Filters -->
    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6 no-print">
      <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <label for="itemId" class="block text-sm font-medium text-gray-700 mb-1">
            Select Item <span class="text-red-500">*</span>
          </label>
          <select
            id="itemId"
            name="itemId"
            required
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          >
            <option value="">Choose an item...</option>
            {items.map((item: any) => (
              <option value={item.id} selected={itemId === item.id.toString()}>
                {item.itemCode} - {item.itemName}
              </option>
            ))}
          </select>
        </div>

        <div>
          <label for="fromDate" class="block text-sm font-medium text-gray-700 mb-1">
            From Date
          </label>
          <input
            type="date"
            id="fromDate"
            name="fromDate"
            value={fromDate || ''}
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          />
        </div>

        <div>
          <label for="toDate" class="block text-sm font-medium text-gray-700 mb-1">
            To Date
          </label>
          <input
            type="date"
            id="toDate"
            name="toDate"
            value={toDate || ''}
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          />
        </div>

        <div class="flex items-end">
          <button
            type="submit"
            class="w-full px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 font-medium"
          >
            Generate Card
          </button>
        </div>
      </form>
    </div>

    {selectedItem ? (
      <>
        <!-- Item Information -->
        <div class="bg-white rounded-lg shadow border border-gray-200 p-6 mb-6">
          <div class="grid grid-cols-2 md:grid-cols-6 gap-4">
            <div>
              <span class="text-sm text-gray-500">Item Code</span>
              <div class="font-bold text-gray-900">{selectedItem.itemCode}</div>
            </div>
            <div class="md:col-span-2">
              <span class="text-sm text-gray-500">Item Name</span>
              <div class="font-bold text-gray-900">{selectedItem.itemName}</div>
            </div>
            <div>
              <span class="text-sm text-gray-500">Unit</span>
              <div class="font-bold text-gray-900">{selectedItem.unit}</div>
            </div>
            <div>
              <span class="text-sm text-gray-500">Unit Cost</span>
              <div class="font-bold text-gray-900">₱{formatCurrency(parseFloat(selectedItem.unitCost))}</div>
            </div>
            <div>
              <span class="text-sm text-gray-500">Current Stock</span>
              <div class="font-bold text-primary-600">{selectedItem.quantityOnHand} {selectedItem.unit}</div>
            </div>
          </div>
        </div>

        <!-- Stock Card Transactions -->
        <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
          {transactions.length > 0 ? (
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Date
                    </th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Transaction No.
                    </th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Type
                    </th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Reference
                    </th>
                    <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Receipt
                    </th>
                    <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Issue
                    </th>
                    <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Balance
                    </th>
                    <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Unit Cost
                    </th>
                    <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Total Value
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  {transactions.map((txn: any, index: number) => {
                    // Calculate balance based on transaction type
                    if (txn.transactionType === 'receipt') {
                      runningBalance += txn.quantity;
                    } else if (txn.transactionType === 'issue') {
                      runningBalance -= txn.quantity;
                    } else if (txn.transactionType === 'adjustment') {
                      // For adjustments, set to the new quantity
                      runningBalance = txn.quantity;
                    }

                    const receiptQty = txn.transactionType === 'receipt' ? txn.quantity : 0;
                    const issueQty = txn.transactionType === 'issue' ? txn.quantity : 0;

                    return (
                      <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                          {new Date(txn.transactionDate).toLocaleDateString()}
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">
                          {txn.transactionNo}
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap text-sm">
                          <span class={`inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium ${
                            txn.transactionType === 'receipt' ? 'bg-green-100 text-green-800' :
                            txn.transactionType === 'issue' ? 'bg-red-100 text-red-800' :
                            txn.transactionType === 'adjustment' ? 'bg-orange-100 text-orange-800' :
                            'bg-blue-100 text-blue-800'
                          }`}>
                            {txn.transactionType}
                          </span>
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                          {txn.reference || '-'}
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-green-600 font-medium">
                          {receiptQty > 0 ? receiptQty : '-'}
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-red-600 font-medium">
                          {issueQty > 0 ? issueQty : '-'}
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap text-sm text-right font-bold text-gray-900">
                          {runningBalance}
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-500">
                          ₱{formatCurrency(parseFloat(txn.unitCost))}
                        </td>
                        <td class="px-4 py-3 whitespace-nowrap text-sm text-right font-medium text-gray-900">
                          ₱{formatCurrency(txn.totalValue)}
                        </td>
                      </tr>
                    );
                  })}
                </tbody>
                <tfoot class="bg-gray-50">
                  <tr>
                    <td colspan="6" class="px-4 py-3 text-sm font-bold text-gray-900 text-right">
                      CURRENT BALANCE:
                    </td>
                    <td class="px-4 py-3 text-sm font-bold text-primary-600 text-right">
                      {selectedItem.quantityOnHand} {selectedItem.unit}
                    </td>
                    <td colspan="2"></td>
                  </tr>
                </tfoot>
              </table>
            </div>
          ) : (
            <div class="px-6 py-12 text-center">
              <i class="pi pi-inbox text-gray-400 text-4xl mb-4"></i>
              <h3 class="text-lg font-medium text-gray-900 mb-2">No transactions found</h3>
              <p class="text-gray-500">
                {fromDate || toDate
                  ? 'No transactions found for the selected date range.'
                  : 'No transactions have been recorded for this item yet.'}
              </p>
            </div>
          )}
        </div>
      </>
    ) : (
      <div class="bg-white rounded-lg shadow border border-gray-200 p-12 text-center">
        <i class="pi pi-file-edit text-gray-400 text-5xl mb-4"></i>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Select an Item</h3>
        <p class="text-gray-500">
          Please select an item from the dropdown above to view its stock card.
        </p>
      </div>
    )}
  </div>
</MainLayout>

<style>
  @media print {
    .no-print {
      display: none !important;
    }

    body {
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }
  }
</style>
