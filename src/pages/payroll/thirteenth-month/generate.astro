---
import MainLayout from '../../../layouts/MainLayout.astro';

const user = Astro.locals.user;
if (!user) return Astro.redirect('/login');

const currentYear = new Date().getFullYear();
---

<MainLayout title="Generate 13th Month Pay">
  <div class="container mx-auto px-4 py-6">
    <nav class="flex mb-4">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li><a href="/payroll/thirteenth-month" class="text-gray-700 hover:text-primary-600">13th Month Pay</a></li>
        <li><i class="pi pi-chevron-right text-gray-400 text-sm"></i><span class="ml-1 text-gray-500">Generate</span></li>
      </ol>
    </nav>

    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Generate 13th Month Pay</h1>
      <p class="mt-1 text-sm text-gray-600">Calculate 13th month pay for all active employees</p>
    </div>

    <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
        <div class="flex items-start">
          <i class="pi pi-info-circle text-blue-600 text-xl mr-3 mt-1"></i>
          <div>
            <h3 class="text-blue-900 font-semibold mb-2">How 13th Month Pay is Calculated</h3>
            <ul class="text-sm text-blue-800 space-y-1">
              <li>• Basic formula: Total basic salary for the year ÷ 12</li>
              <li>• Pro-rated for employees who worked less than 12 months</li>
              <li>• First ₱90,000 is tax-free, excess is taxed at 15%</li>
              <li>• Only active employees are included</li>
            </ul>
          </div>
        </div>
      </div>

      <form id="generate-form" class="space-y-6">
        <div>
          <label for="year" class="block text-sm font-medium text-gray-700 mb-2">
            Select Year <span class="text-red-500">*</span>
          </label>
          <select
            id="year"
            name="year"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500"
          >
            <option value={currentYear}>{currentYear}</option>
            <option value={currentYear - 1}>{currentYear - 1}</option>
          </select>
        </div>

        <div class="flex justify-end gap-3">
          <a href="/payroll/thirteenth-month" class="btn btn-secondary">Cancel</a>
          <button type="submit" class="btn btn-primary">
            <i class="pi pi-check mr-2"></i>
            Generate 13th Month Pay
          </button>
        </div>
      </form>
    </div>
  </div>
</MainLayout>

<script>
  document.getElementById('generate-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const year = (document.getElementById('year') as HTMLSelectElement).value;

    if (!confirm(`Generate 13th month pay for all active employees for year ${year}?`)) {
      return;
    }

    try {
      const response = await fetch('/api/payroll/thirteenth-month', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ year: parseInt(year) }),
      });

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.error || 'Failed to generate 13th month pay');
      }

      const result = await response.json();

      alert(`13th month pay generated successfully!\n\nTotal Employees: ${result.totalEmployees}\nTotal Amount: ₱${result.totalAmount.toLocaleString('en-PH', { minimumFractionDigits: 2 })}`);

      window.location.href = '/payroll/thirteenth-month';
    } catch (error: any) {
      alert(error.message || 'Failed to generate 13th month pay');
    }
  });
</script>
