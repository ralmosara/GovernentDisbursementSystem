---
import MainLayout from '../../../layouts/MainLayout.astro';
import { assetService } from '../../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get query parameters for filtering
const url = new URL(Astro.request.url);
const disposalMethod = url.searchParams.get('method') || '';
const fromDate = url.searchParams.get('from') || '';
const toDate = url.searchParams.get('to') || '';

// Fetch disposals with filters
let disposals: any[] = [];

try {
  const filters: any = {};
  if (disposalMethod) filters.disposalMethod = disposalMethod;
  if (fromDate) filters.fromDate = fromDate;
  if (toDate) filters.toDate = toDate;

  disposals = await assetService.getDisposals(filters);
} catch (error) {
  console.error('Error loading disposals:', error);
}

const disposalMethods = [
  { value: 'sale', label: 'Sale' },
  { value: 'transfer', label: 'Transfer' },
  { value: 'donation', label: 'Donation' },
  { value: 'destruction', label: 'Destruction' },
  { value: 'trade_in', label: 'Trade-in' },
  { value: 'scrap', label: 'Scrap' },
  { value: 'obsolescence', label: 'Obsolescence' },
];

const methodLabels: Record<string, string> = Object.fromEntries(
  disposalMethods.map(m => [m.value, m.label])
);
---

<MainLayout title="Asset Disposals">
  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Asset Disposals</h1>
        <p class="mt-1 text-sm text-gray-600">
          Track disposed property, plant, and equipment
        </p>
      </div>
      <a
        href="/assets/disposals/create"
        class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
      >
        <i class="pi pi-plus mr-2"></i>
        Record Disposal
      </a>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6">
      <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <label for="method" class="block text-sm font-medium text-gray-700 mb-1">
            Disposal Method
          </label>
          <select
            id="method"
            name="method"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          >
            <option value="">All Methods</option>
            {disposalMethods.map((method) => (
              <option value={method.value} selected={disposalMethod === method.value}>
                {method.label}
              </option>
            ))}
          </select>
        </div>

        <div>
          <label for="from" class="block text-sm font-medium text-gray-700 mb-1">
            From Date
          </label>
          <input
            type="date"
            id="from"
            name="from"
            value={fromDate}
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          />
        </div>

        <div>
          <label for="to" class="block text-sm font-medium text-gray-700 mb-1">
            To Date
          </label>
          <input
            type="date"
            id="to"
            name="to"
            value={toDate}
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          />
        </div>

        <div class="flex items-end">
          <button
            type="submit"
            class="w-full px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 font-medium"
          >
            Apply Filters
          </button>
        </div>
      </form>
    </div>

    <!-- Disposals Table -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
      {disposals.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Disposal No.
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Asset
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Method
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Disposal Date
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Buyer/Recipient
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Disposal Value
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {disposals.map((disposal: any) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    {disposal.disposalNo}
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    {disposal.asset ? (
                      <div>
                        <div class="font-medium">{disposal.asset.assetNo}</div>
                        <div class="text-gray-500 text-xs">{disposal.asset.description}</div>
                      </div>
                    ) : '-'}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                      {methodLabels[disposal.disposalMethod] || disposal.disposalMethod}
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {new Date(disposal.disposalDate).toLocaleDateString()}
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    {disposal.buyerRecipient || '-'}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                    {disposal.disposalValue && parseFloat(disposal.disposalValue) > 0
                      ? `₱${Number(disposal.disposalValue).toLocaleString()}`
                      : '-'}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a
                      href={`/assets/disposals/${disposal.id}`}
                      class="text-primary-600 hover:text-primary-900"
                    >
                      View
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      ) : (
        <div class="px-6 py-12 text-center">
          <i class="pi pi-inbox text-gray-400 text-4xl mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No disposals recorded</h3>
          <p class="text-gray-500 mb-4">
            {disposalMethod || fromDate || toDate
              ? 'No disposals match your filters.'
              : 'Start by recording your first asset disposal.'}
          </p>
          <a
            href="/assets/disposals/create"
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
          >
            <i class="pi pi-plus mr-2"></i>
            Record Disposal
          </a>
        </div>
      )}
    </div>

    <!-- Summary Cards -->
    {disposals.length > 0 && (
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="flex items-center">
            <div class="p-3 bg-red-100 rounded-full">
              <i class="pi pi-times-circle text-red-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Disposals</p>
              <p class="text-2xl font-bold text-gray-900">{disposals.length}</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="flex items-center">
            <div class="p-3 bg-green-100 rounded-full">
              <i class="pi pi-dollar text-green-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Disposal Value</p>
              <p class="text-2xl font-bold text-gray-900">
                ₱{disposals.reduce((sum, d) => sum + parseFloat(d.disposalValue || '0'), 0).toLocaleString()}
              </p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="flex items-center">
            <div class="p-3 bg-blue-100 rounded-full">
              <i class="pi pi-wallet text-blue-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Original Asset Value</p>
              <p class="text-2xl font-bold text-gray-900">
                ₱{disposals.reduce((sum, d) => sum + (d.asset ? parseFloat(d.asset.acquisitionCost || '0') : 0), 0).toLocaleString()}
              </p>
            </div>
          </div>
        </div>
      </div>
    )}
  </div>
</MainLayout>
