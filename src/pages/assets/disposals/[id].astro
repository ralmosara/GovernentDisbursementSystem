---
import MainLayout from '../../../layouts/MainLayout.astro';
import { assetService } from '../../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

const id = parseInt(Astro.params.id || '0');

if (!id) {
  return Astro.redirect('/assets/disposals');
}

let disposal: any = null;
let isEditing = false;

try {
  disposal = await assetService.getDisposalById(id);

  if (!disposal) {
    return Astro.redirect('/assets/disposals');
  }

  // Check if editing mode
  const url = new URL(Astro.request.url);
  isEditing = url.searchParams.get('edit') === 'true';
} catch (error) {
  console.error('Error loading disposal:', error);
  return Astro.redirect('/assets/disposals');
}

const disposalMethodLabels: Record<string, string> = {
  sale: 'Sale',
  transfer: 'Transfer',
  donation: 'Donation',
  destruction: 'Destruction',
  trade_in: 'Trade-in',
  scrap: 'Scrap',
  obsolescence: 'Obsolescence',
};
---

<MainLayout title={`Disposal ${disposal.disposalNo}`}>
  <div class="container mx-auto px-4 py-6">
    <!-- Breadcrumb -->
    <nav class="mb-4">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li>
          <a href="/assets" class="hover:text-gray-700">Assets</a>
        </li>
        <li><i class="pi pi-angle-right"></i></li>
        <li>
          <a href="/assets/disposals" class="hover:text-gray-700">Disposals</a>
        </li>
        <li><i class="pi pi-angle-right"></i></li>
        <li class="text-gray-900">{disposal.disposalNo}</li>
      </ol>
    </nav>

    <!-- Page Header -->
    <div class="flex justify-between items-start mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">{disposal.disposalNo}</h1>
        <p class="mt-1 text-sm text-gray-600">
          Asset disposal recorded on {new Date(disposal.createdAt).toLocaleDateString()}
        </p>
      </div>
      <div class="flex space-x-2">
        {!isEditing && (
          <>
            <a
              href={`/assets/disposals/${disposal.id}?edit=true`}
              class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
            >
              <i class="pi pi-pencil mr-2"></i>
              Edit
            </a>
            <button
              id="delete-btn"
              class="inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50"
            >
              <i class="pi pi-trash mr-2"></i>
              Delete
            </button>
          </>
        )}
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Edit Form (if editing) -->
        {isEditing && (
          <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Edit Disposal</h2>
            <div id="edit-form"></div>
          </div>
        )}

        <!-- Disposal Details (if not editing) -->
        {!isEditing && (
          <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Disposal Details</h2>
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Disposal Date</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  {new Date(disposal.disposalDate).toLocaleDateString()}
                </dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500">Disposal Method</dt>
                <dd class="mt-1">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                    {disposalMethodLabels[disposal.disposalMethod] || disposal.disposalMethod}
                  </span>
                </dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500">Disposal Value</dt>
                <dd class="mt-1 text-sm text-gray-900 font-semibold">
                  {disposal.disposalValue && parseFloat(disposal.disposalValue) > 0
                    ? `₱${Number(disposal.disposalValue).toLocaleString()}`
                    : 'N/A'}
                </dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500">Buyer/Recipient</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  {disposal.buyerRecipient || 'N/A'}
                </dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500">Approved By</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  {disposal.approvedBy ? disposal.approvedBy.name : 'Not specified'}
                </dd>
              </div>

              {disposal.remarks && (
                <div class="md:col-span-2">
                  <dt class="text-sm font-medium text-gray-500">Remarks</dt>
                  <dd class="mt-1 text-sm text-gray-900">{disposal.remarks}</dd>
                </div>
              )}
            </dl>
          </div>
        )}

        <!-- Asset Information -->
        {disposal.asset && (
          <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-lg font-semibold text-gray-900">Asset Information</h2>
              <a
                href={`/assets/fixed/${disposal.asset.id}`}
                class="text-sm text-primary-600 hover:text-primary-700 font-medium"
              >
                View Asset Details
              </a>
            </div>
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Asset Number</dt>
                <dd class="mt-1 text-sm text-gray-900 font-medium">{disposal.asset.assetNo}</dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500">Category</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  {disposal.asset.category?.name || 'N/A'}
                </dd>
              </div>

              <div class="md:col-span-2">
                <dt class="text-sm font-medium text-gray-500">Description</dt>
                <dd class="mt-1 text-sm text-gray-900">{disposal.asset.description}</dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500">Acquisition Cost</dt>
                <dd class="mt-1 text-sm text-gray-900 font-semibold">
                  ₱{Number(disposal.asset.acquisitionCost).toLocaleString()}
                </dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500">Acquisition Date</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  {new Date(disposal.asset.acquisitionDate).toLocaleDateString()}
                </dd>
              </div>

              <div>
                <dt class="text-sm font-medium text-gray-500">Salvage Value</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  ₱{Number(disposal.asset.salvageValue).toLocaleString()}
                </dd>
              </div>
            </dl>
          </div>
        )}
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Quick Stats -->
        <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
          <h3 class="text-sm font-medium text-gray-900 mb-4">Financial Summary</h3>
          <div class="space-y-3">
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">Original Cost</span>
              <span class="text-sm font-semibold text-gray-900">
                ₱{disposal.asset ? Number(disposal.asset.acquisitionCost).toLocaleString() : '0'}
              </span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-500">Disposal Value</span>
              <span class="text-sm font-semibold text-green-600">
                ₱{Number(disposal.disposalValue || 0).toLocaleString()}
              </span>
            </div>
            <div class="pt-3 border-t border-gray-200">
              <div class="flex justify-between items-center">
                <span class="text-sm font-medium text-gray-900">Loss on Disposal</span>
                <span class="text-sm font-bold text-red-600">
                  ₱{disposal.asset
                    ? (Number(disposal.asset.acquisitionCost) - Number(disposal.disposalValue || 0)).toLocaleString()
                    : '0'}
                </span>
              </div>
              <p class="text-xs text-gray-500 mt-1">
                (Before depreciation adjustment)
              </p>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        {!isEditing && (
          <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
            <h3 class="text-sm font-medium text-gray-900 mb-4">Quick Actions</h3>
            <div class="space-y-2">
              <a
                href="/assets/disposals"
                class="block w-full px-4 py-2 text-sm text-center border border-gray-300 rounded-md hover:bg-gray-50"
              >
                <i class="pi pi-arrow-left mr-2"></i>
                Back to Disposals
              </a>
              {disposal.asset && (
                <a
                  href={`/assets/fixed/${disposal.asset.id}`}
                  class="block w-full px-4 py-2 text-sm text-center border border-gray-300 rounded-md hover:bg-gray-50"
                >
                  <i class="pi pi-eye mr-2"></i>
                  View Asset
                </a>
              )}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>

  {isEditing && (
    <script define:vars={{ disposal }}>
      import AssetDisposalForm from '../../../components/forms/assets/AssetDisposalForm.vue';
      import { createApp } from 'vue';

      const app = createApp(AssetDisposalForm, {
        assetId: disposal.asset?.id,
        initialData: disposal,
        onSubmit: async (formData) => {
          try {
            const response = await fetch(`/api/assets/disposals/${disposal.id}`, {
              method: 'PUT',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(formData),
            });

            if (response.ok) {
              window.location.href = `/assets/disposals/${disposal.id}`;
            } else {
              const error = await response.json();
              alert(error.error || 'Failed to update disposal');
            }
          } catch (error) {
            console.error('Error updating disposal:', error);
            alert('Failed to update disposal. Please try again.');
          }
        },
        onCancel: () => {
          window.location.href = `/assets/disposals/${disposal.id}`;
        },
      });

      app.mount('#edit-form');
    </script>
  )}

  {!isEditing && (
    <script define:vars={{ disposal }}>
      document.getElementById('delete-btn')?.addEventListener('click', async () => {
        if (!confirm('Are you sure you want to delete this disposal record? This will reactivate the asset.')) {
          return;
        }

        try {
          const response = await fetch(`/api/assets/disposals/${disposal.id}`, {
            method: 'DELETE',
          });

          if (response.ok) {
            window.location.href = '/assets/disposals';
          } else {
            const error = await response.json();
            alert(error.error || 'Failed to delete disposal');
          }
        } catch (error) {
          console.error('Error deleting disposal:', error);
          alert('Failed to delete disposal. Please try again.');
        }
      });
    </script>
  )}
</MainLayout>
