---
import MainLayout from '../../layouts/MainLayout.astro';
import { assetService } from '../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Fetch dashboard metrics
let metrics;

try {
  metrics = await assetService.getAssetDashboardMetrics();
} catch (error) {
  console.error('Error loading asset dashboard:', error);
  metrics = {
    totalAssets: 0,
    totalAcquisitionCost: 0,
    totalAccumulatedDepreciation: 0,
    currentBookValue: 0,
    activeAssets: 0,
    disposedAssets: 0,
    assetsByCategory: [],
    assetsByStatus: [],
    recentAssets: [],
  };
}

// Format currency helper
function formatCurrency(value: number): string {
  return value.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
}
---

<MainLayout title="Asset Management Dashboard">
  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Asset Management Dashboard</h1>
      <p class="mt-1 text-sm text-gray-600">
        Overview of property, plant, and equipment
      </p>
    </div>

    <!-- Key Metrics -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
      <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500">Total Assets</p>
            <p class="mt-2 text-3xl font-bold text-gray-900">{metrics.totalAssets}</p>
          </div>
          <div class="p-3 bg-blue-100 rounded-full">
            <i class="pi pi-building text-blue-600 text-2xl"></i>
          </div>
        </div>
        <p class="mt-2 text-xs text-gray-600">
          <span class="text-green-600 font-medium">{metrics.activeAssets} active</span>
          {metrics.disposedAssets > 0 && (
            <span class="text-gray-500">, {metrics.disposedAssets} disposed</span>
          )}
        </p>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500">Acquisition Cost</p>
            <p class="mt-2 text-3xl font-bold text-gray-900">
              ₱{formatCurrency(metrics.totalAcquisitionCost)}
            </p>
          </div>
          <div class="p-3 bg-green-100 rounded-full">
            <i class="pi pi-wallet text-green-600 text-2xl"></i>
          </div>
        </div>
        <p class="mt-2 text-xs text-gray-600">Total historical cost</p>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500">Accumulated Depreciation</p>
            <p class="mt-2 text-3xl font-bold text-orange-600">
              ₱{formatCurrency(metrics.totalAccumulatedDepreciation)}
            </p>
          </div>
          <div class="p-3 bg-orange-100 rounded-full">
            <i class="pi pi-chart-line text-orange-600 text-2xl"></i>
          </div>
        </div>
        <p class="mt-2 text-xs text-gray-600">Total depreciation to date</p>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500">Current Book Value</p>
            <p class="mt-2 text-3xl font-bold text-primary-600">
              ₱{formatCurrency(metrics.currentBookValue)}
            </p>
          </div>
          <div class="p-3 bg-primary-100 rounded-full">
            <i class="pi pi-dollar text-primary-600 text-2xl"></i>
          </div>
        </div>
        <p class="mt-2 text-xs text-gray-600">Net carrying value</p>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
      <!-- Assets by Category -->
      <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-gray-900">Assets by Category</h2>
          <a href="/assets/categories" class="text-sm text-primary-600 hover:text-primary-700">
            Manage Categories
          </a>
        </div>
        {metrics.assetsByCategory.length > 0 ? (
          <div class="space-y-3">
            {metrics.assetsByCategory.map((item: any) => (
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-md">
                <div class="flex-1">
                  <p class="text-sm font-medium text-gray-900">{item.category}</p>
                  <p class="text-xs text-gray-500">{item.count} asset{item.count !== 1 ? 's' : ''}</p>
                </div>
                <div class="text-right">
                  <p class="text-sm font-semibold text-gray-900">
                    ₱{formatCurrency(item.value)}
                  </p>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="text-center py-8">
            <i class="pi pi-inbox text-gray-400 text-3xl mb-3"></i>
            <p class="text-sm text-gray-500">No assets categorized yet</p>
          </div>
        )}
      </div>

      <!-- Assets by Status -->
      <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Assets by Status</h2>
        {metrics.assetsByStatus.length > 0 ? (
          <div class="space-y-3">
            {metrics.assetsByStatus.map((item: any) => {
              const isActive = item.status === 'active';
              const isDisposed = item.status === 'disposed';
              const percentage = metrics.totalAssets > 0 ? ((item.count / metrics.totalAssets) * 100).toFixed(1) : '0';

              return (
                <div class={`flex items-center justify-between p-4 rounded-md ${isActive ? 'bg-green-50' : isDisposed ? 'bg-red-50' : 'bg-gray-50'}`}>
                  <div class="flex items-center space-x-3">
                    <i class={`pi ${isActive ? 'pi-check-circle text-green-600' : isDisposed ? 'pi-times-circle text-red-600' : 'pi-ban text-gray-600'} text-xl`}></i>
                    <div>
                      <p class="text-sm font-medium text-gray-900">
                        {isActive ? 'Active' : isDisposed ? 'Disposed' : 'Written Off'}
                      </p>
                      <p class="text-xs text-gray-500">{percentage}% of total</p>
                    </div>
                  </div>
                  <div class="text-2xl font-bold text-gray-900">{item.count}</div>
                </div>
              );
            })}
          </div>
        ) : (
          <div class="text-center py-8">
            <i class="pi pi-inbox text-gray-400 text-3xl mb-3"></i>
            <p class="text-sm text-gray-500">No status data available</p>
          </div>
        )}
      </div>
    </div>

    <!-- Recent Assets -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden mb-6">
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Recent Assets</h2>
        <a
          href="/assets/fixed"
          class="text-sm text-primary-600 hover:text-primary-700 font-medium"
        >
          View All Assets
        </a>
      </div>
      {metrics.recentAssets.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Asset No.
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Description
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Category
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Acquisition Cost
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Date
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {metrics.recentAssets.map((asset: any) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    {asset.assetNo}
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <div class="max-w-xs truncate">{asset.description}</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    {asset.category ? (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        {asset.category}
                      </span>
                    ) : '-'}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    ₱{Number(asset.acquisitionCost).toLocaleString()}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {new Date(asset.acquisitionDate).toLocaleDateString()}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    {asset.status === 'active' ? (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <i class="pi pi-check-circle mr-1"></i>
                        Active
                      </span>
                    ) : asset.status === 'disposed' ? (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <i class="pi pi-times-circle mr-1"></i>
                        Disposed
                      </span>
                    ) : (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        <i class="pi pi-ban mr-1"></i>
                        Written Off
                      </span>
                    )}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a
                      href={`/assets/fixed/${asset.id}`}
                      class="text-primary-600 hover:text-primary-900"
                    >
                      View
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      ) : (
        <div class="px-6 py-12 text-center">
          <i class="pi pi-inbox text-gray-400 text-4xl mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No assets registered yet</h3>
          <p class="text-gray-500 mb-4">Start by adding your first fixed asset.</p>
          <a
            href="/assets/fixed/create"
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
          >
            <i class="pi pi-plus mr-2"></i>
            Add Fixed Asset
          </a>
        </div>
      )}
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <a
        href="/assets/fixed/create"
        class="flex items-center justify-between p-6 bg-gradient-to-r from-blue-500 to-blue-600 rounded-lg shadow-md hover:shadow-lg transition-shadow text-white"
      >
        <div>
          <h3 class="text-lg font-semibold">Add Fixed Asset</h3>
          <p class="text-sm text-blue-100 mt-1">Register new property or equipment</p>
        </div>
        <i class="pi pi-plus-circle text-3xl"></i>
      </a>

      <a
        href="/assets/categories"
        class="flex items-center justify-between p-6 bg-gradient-to-r from-purple-500 to-purple-600 rounded-lg shadow-md hover:shadow-lg transition-shadow text-white"
      >
        <div>
          <h3 class="text-lg font-semibold">Manage Categories</h3>
          <p class="text-sm text-purple-100 mt-1">Configure asset classifications</p>
        </div>
        <i class="pi pi-tags text-3xl"></i>
      </a>

      <a
        href="/assets/fixed"
        class="flex items-center justify-between p-6 bg-gradient-to-r from-green-500 to-green-600 rounded-lg shadow-md hover:shadow-lg transition-shadow text-white"
      >
        <div>
          <h3 class="text-lg font-semibold">View All Assets</h3>
          <p class="text-sm text-green-100 mt-1">Browse and search asset registry</p>
        </div>
        <i class="pi pi-list text-3xl"></i>
      </a>
    </div>
  </div>
</MainLayout>
