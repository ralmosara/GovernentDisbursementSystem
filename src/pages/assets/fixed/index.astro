---
import MainLayout from '../../../layouts/MainLayout.astro';
import { assetService } from '../../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get filter parameters
const categoryIdParam = Astro.url.searchParams.get('categoryId');
const statusParam = Astro.url.searchParams.get('status') as 'active' | 'disposed' | 'written_off' | null;
const locationParam = Astro.url.searchParams.get('location');

const filters: any = {};

if (categoryIdParam) {
  filters.categoryId = parseInt(categoryIdParam);
}

if (statusParam) {
  filters.status = statusParam;
}

if (locationParam) {
  filters.location = locationParam;
}

// Fetch fixed assets
const assets = await assetService.getFixedAssets(filters);

// Get categories for filter dropdown
const categories = await assetService.getAssetCategories(true);
---

<MainLayout title="Fixed Assets">
  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Fixed Assets</h1>
        <p class="mt-1 text-sm text-gray-600">
          Manage property, plant, and equipment
        </p>
      </div>
      <a
        href="/assets/fixed/create"
        class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
      >
        <i class="pi pi-plus mr-2"></i>
        Add Fixed Asset
      </a>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6">
      <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <label for="categoryId" class="block text-sm font-medium text-gray-700 mb-1">
            Category
          </label>
          <select
            id="categoryId"
            name="categoryId"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm"
          >
            <option value="">All Categories</option>
            {categories.map((category: any) => (
              <option value={category.id} selected={categoryIdParam === category.id.toString()}>
                {category.name}
              </option>
            ))}
          </select>
        </div>
        <div>
          <label for="status" class="block text-sm font-medium text-gray-700 mb-1">
            Status
          </label>
          <select
            id="status"
            name="status"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm"
          >
            <option value="">All Statuses</option>
            <option value="active" selected={statusParam === 'active'}>Active</option>
            <option value="disposed" selected={statusParam === 'disposed'}>Disposed</option>
            <option value="written_off" selected={statusParam === 'written_off'}>Written Off</option>
          </select>
        </div>
        <div>
          <label for="location" class="block text-sm font-medium text-gray-700 mb-1">
            Location
          </label>
          <input
            id="location"
            name="location"
            type="text"
            value={locationParam || ''}
            placeholder="Search location..."
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm"
          />
        </div>
        <div class="flex items-end space-x-2">
          <button
            type="submit"
            class="flex-1 px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
          >
            <i class="pi pi-filter mr-2"></i>
            Apply
          </button>
          <a
            href="/assets/fixed"
            class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
          >
            <i class="pi pi-times"></i>
          </a>
        </div>
      </form>
    </div>

    <!-- Assets Table -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
      {assets.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Asset No.
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Description
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Category
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Acquisition Cost
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Location
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {assets.map((asset: any) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    {asset.assetNo}
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <div class="max-w-xs truncate">{asset.description}</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    {asset.category ? (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        {asset.category.name}
                      </span>
                    ) : '-'}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    ₱{Number(asset.acquisitionCost).toLocaleString()}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {asset.location || '-'}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    {asset.status === 'active' ? (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <i class="pi pi-check-circle mr-1"></i>
                        Active
                      </span>
                    ) : asset.status === 'disposed' ? (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <i class="pi pi-times-circle mr-1"></i>
                        Disposed
                      </span>
                    ) : (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        <i class="pi pi-ban mr-1"></i>
                        Written Off
                      </span>
                    )}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a
                      href={`/assets/fixed/${asset.id}`}
                      class="text-primary-600 hover:text-primary-900"
                    >
                      View
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      ) : (
        <div class="px-6 py-12 text-center">
          <i class="pi pi-inbox text-gray-400 text-4xl mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No fixed assets found</h3>
          <p class="text-gray-500 mb-4">Get started by adding your first fixed asset.</p>
          <a
            href="/assets/fixed/create"
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
          >
            <i class="pi pi-plus mr-2"></i>
            Add Fixed Asset
          </a>
        </div>
      )}
    </div>

    <!-- Summary Stats -->
    {assets.length > 0 && (
      <div class="mt-6 grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="text-sm font-medium text-gray-500">Total Assets</div>
          <div class="mt-1 text-2xl font-semibold text-gray-900">{assets.length}</div>
        </div>
        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="text-sm font-medium text-gray-500">Total Acquisition Cost</div>
          <div class="mt-1 text-2xl font-semibold text-gray-900">
            ₱{assets.reduce((sum: number, a: any) => sum + parseFloat(a.acquisitionCost), 0).toLocaleString()}
          </div>
        </div>
        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="text-sm font-medium text-gray-500">Active Assets</div>
          <div class="mt-1 text-2xl font-semibold text-green-600">
            {assets.filter((a: any) => a.status === 'active').length}
          </div>
        </div>
        <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
          <div class="text-sm font-medium text-gray-500">Categories</div>
          <div class="mt-1 text-2xl font-semibold text-gray-900">
            {new Set(assets.map((a: any) => a.category?.id).filter(Boolean)).size}
          </div>
        </div>
      </div>
    )}
  </div>
</MainLayout>
