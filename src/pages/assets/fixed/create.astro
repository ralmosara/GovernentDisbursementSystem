---
import MainLayout from '../../../layouts/MainLayout.astro';
import FixedAssetForm from '../../../components/forms/assets/FixedAssetForm.vue';
import { assetService } from '../../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Fetch active categories for the form
const categories = await assetService.getAssetCategories(true);
const categoriesJson = JSON.stringify(categories);
---

<MainLayout title="Create Fixed Asset">
  <div class="container mx-auto px-4 py-6">
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <a href="/assets" class="text-gray-700 hover:text-primary-600">
            Assets
          </a>
        </li>
        <li>
          <div class="flex items-center">
            <i class="pi pi-angle-right text-gray-400"></i>
            <a href="/assets/fixed" class="ml-1 text-gray-700 hover:text-primary-600 md:ml-2">
              Fixed Assets
            </a>
          </div>
        </li>
        <li aria-current="page">
          <div class="flex items-center">
            <i class="pi pi-angle-right text-gray-400"></i>
            <span class="ml-1 text-gray-500 md:ml-2">Create</span>
          </div>
        </li>
      </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Create Fixed Asset</h1>
      <p class="mt-1 text-sm text-gray-600">
        Add a new property, plant, or equipment to the asset registry
      </p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
      <FixedAssetForm client:only="vue" categoriesJson={categoriesJson} />
    </div>
  </div>
</MainLayout>
