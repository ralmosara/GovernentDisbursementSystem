---
import MainLayout from '../../../layouts/MainLayout.astro';
import { assetService } from '../../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get query parameters
const url = new URL(Astro.request.url);
const categoryId = url.searchParams.get('category');

// Fetch all fixed assets with depreciation
let assets: any[] = [];
let categories: any[] = [];

try {
  const filters: any = {};
  if (categoryId) {
    filters.categoryId = parseInt(categoryId);
  }

  assets = await assetService.getFixedAssets(filters);
  categories = await assetService.getAssetCategories();
} catch (error) {
  console.error('Error loading depreciation data:', error);
}

// Calculate totals
const totalAcquisitionCost = assets.reduce((sum, asset) => sum + parseFloat(asset.acquisitionCost || '0'), 0);
const totalSalvageValue = assets.reduce((sum, asset) => sum + parseFloat(asset.salvageValue || '0'), 0);
const totalDepreciableAmount = totalAcquisitionCost - totalSalvageValue;
---

<MainLayout title="Asset Depreciation">
  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Asset Depreciation</h1>
        <p class="mt-1 text-sm text-gray-600">
          View depreciation schedules and asset values
        </p>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6">
      <form method="GET" class="flex items-end gap-4">
        <div class="flex-1">
          <label for="category" class="block text-sm font-medium text-gray-700 mb-1">
            Filter by Category
          </label>
          <select
            id="category"
            name="category"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          >
            <option value="">All Categories</option>
            {categories.map((cat: any) => (
              <option value={cat.id} selected={categoryId === cat.id.toString()}>
                {cat.name}
              </option>
            ))}
          </select>
        </div>
        <button
          type="submit"
          class="px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 font-medium"
        >
          Apply Filter
        </button>
      </form>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 rounded-full">
            <i class="pi pi-building text-blue-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Assets</p>
            <p class="text-2xl font-bold text-gray-900">{assets.length}</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-green-100 rounded-full">
            <i class="pi pi-dollar text-green-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Acquisition Cost</p>
            <p class="text-2xl font-bold text-gray-900">
              ₱{totalAcquisitionCost.toLocaleString()}
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-orange-100 rounded-full">
            <i class="pi pi-chart-line text-orange-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Salvage Value</p>
            <p class="text-2xl font-bold text-gray-900">
              ₱{totalSalvageValue.toLocaleString()}
            </p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow border border-gray-200 p-4">
        <div class="flex items-center">
          <div class="p-3 bg-purple-100 rounded-full">
            <i class="pi pi-wallet text-purple-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Depreciable Amount</p>
            <p class="text-2xl font-bold text-gray-900">
              ₱{totalDepreciableAmount.toLocaleString()}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Assets Table -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
      {assets.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Asset No.
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Description
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Category
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Method
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Acquisition Cost
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Useful Life
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Salvage Value
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {assets.map((asset: any) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    {asset.assetNo}
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <div class="max-w-xs truncate">{asset.description}</div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    {asset.category ? (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        {asset.category.name}
                      </span>
                    ) : '-'}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {asset.category?.depreciationMethod === 'straight_line' ? (
                      <span class="text-green-600">Straight Line</span>
                    ) : asset.category?.depreciationMethod === 'declining_balance' ? (
                      <span class="text-orange-600">Declining Balance</span>
                    ) : (
                      <span class="text-gray-400">None</span>
                    )}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                    ₱{Number(asset.acquisitionCost).toLocaleString()}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-500">
                    {asset.usefulLife} years
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                    ₱{Number(asset.salvageValue).toLocaleString()}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a
                      href={`/assets/fixed/${asset.id}`}
                      class="text-primary-600 hover:text-primary-900 mr-3"
                    >
                      View Schedule
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      ) : (
        <div class="px-6 py-12 text-center">
          <i class="pi pi-inbox text-gray-400 text-4xl mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No assets found</h3>
          <p class="text-gray-500 mb-4">
            {categoryId
              ? 'No assets in this category.'
              : 'Start by adding fixed assets with depreciation.'}
          </p>
          <a
            href="/assets/fixed/create"
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
          >
            <i class="pi pi-plus mr-2"></i>
            Add Fixed Asset
          </a>
        </div>
      )}
    </div>

    <!-- Info Box -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <i class="pi pi-info-circle text-blue-600 text-xl"></i>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-900">About Depreciation Schedules</h3>
          <div class="mt-2 text-sm text-blue-700">
            <ul class="list-disc list-inside space-y-1">
              <li>Click "View Schedule" to see the complete month-by-month depreciation for any asset</li>
              <li>Depreciation schedules are automatically generated when assets are created</li>
              <li><strong>Straight Line:</strong> Equal depreciation each period over useful life</li>
              <li><strong>Declining Balance:</strong> Accelerated depreciation (higher in early years)</li>
              <li>All depreciation stops at salvage value</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
