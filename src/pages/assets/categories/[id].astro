---
import MainLayout from '../../../layouts/MainLayout.astro';
import AssetCategoryForm from '../../../components/forms/assets/AssetCategoryForm.vue';
import { assetService } from '../../../lib/services/asset.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/assets/categories');
}

// Fetch asset category details
let category;
try {
  category = await assetService.getAssetCategoryById(parseInt(id));
} catch (error) {
  console.error('Error loading asset category:', error);
  return Astro.redirect('/assets/categories');
}
---

<MainLayout title={`Asset Category - ${category.code}`}>
  <div class="container mx-auto px-4 py-6">
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <a href="/assets" class="text-gray-700 hover:text-primary-600">
            Assets
          </a>
        </li>
        <li>
          <div class="flex items-center">
            <i class="pi pi-angle-right text-gray-400"></i>
            <a href="/assets/categories" class="ml-1 text-gray-700 hover:text-primary-600 md:ml-2">
              Asset Categories
            </a>
          </div>
        </li>
        <li aria-current="page">
          <div class="flex items-center">
            <i class="pi pi-angle-right text-gray-400"></i>
            <span class="ml-1 text-gray-500 md:ml-2">{category.code}</span>
          </div>
        </li>
      </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-6 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">{category.name}</h1>
        <p class="mt-1 text-sm text-gray-600">
          Code: {category.code}
          {category.usefulLife && ` • Useful Life: ${category.usefulLife} years`}
        </p>
      </div>
      <div class="flex items-center space-x-3">
        {category.isActive ? (
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            <i class="pi pi-check-circle mr-1"></i>
            Active
          </span>
        ) : (
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
            <i class="pi pi-times-circle mr-1"></i>
            Inactive
          </span>
        )}
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Edit Form -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Edit Asset Category</h2>
          <AssetCategoryForm client:only="vue" categoryId={id} />
        </div>
      </div>

      <!-- Details & Stats -->
      <div class="space-y-6">
        <!-- Category Details -->
        <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Category Details</h3>
          <dl class="space-y-3">
            <div>
              <dt class="text-sm font-medium text-gray-500">Code</dt>
              <dd class="mt-1 text-sm text-gray-900">{category.code}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Name</dt>
              <dd class="mt-1 text-sm text-gray-900">{category.name}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Useful Life</dt>
              <dd class="mt-1 text-sm text-gray-900">
                {category.usefulLife ? `${category.usefulLife} years` : 'Not set'}
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Depreciation Method</dt>
              <dd class="mt-1 text-sm text-gray-900">
                {category.depreciationMethod === 'straight_line'
                  ? 'Straight Line'
                  : category.depreciationMethod === 'declining_balance'
                  ? 'Declining Balance'
                  : 'Not set'}
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Capitalization Threshold</dt>
              <dd class="mt-1 text-sm text-gray-900">
                {category.capitalizationThreshold
                  ? `₱${Number(category.capitalizationThreshold).toLocaleString()}`
                  : 'Not set'}
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1">
                {category.isActive ? (
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Active
                  </span>
                ) : (
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    Inactive
                  </span>
                )}
              </dd>
            </div>
          </dl>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
          <div class="space-y-2">
            <a
              href="/assets/fixed/create"
              class="block w-full px-4 py-2 text-sm font-medium text-center text-white bg-primary-600 hover:bg-primary-700 rounded-md"
            >
              <i class="pi pi-plus mr-2"></i>
              Add Asset
            </a>
            <a
              href={`/assets/fixed?categoryId=${id}`}
              class="block w-full px-4 py-2 text-sm font-medium text-center text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 rounded-md"
            >
              <i class="pi pi-list mr-2"></i>
              View Assets
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
