---
import MainLayout from '../layouts/MainLayout.astro';

// Redirect to dashboard if logged in, otherwise to login
if (!Astro.locals.user) {
  return Astro.redirect('/login');
} else {
  return Astro.redirect('/dashboard');
}
---

<MainLayout title="Dashboard - Philippine Government FMS">
  <div class="page-header">
    <h1 class="page-title">Dashboard</h1>
    <p class="page-description">Overview of financial operations and pending actions</p>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <!-- Pending DVs -->
    <div class="card">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 mb-1">Pending DVs</p>
            <p class="text-3xl font-bold text-gray-900">12</p>
          </div>
          <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
            <i class="pi pi-clock text-yellow-600 text-2xl"></i>
          </div>
        </div>
        <div class="mt-4">
          <a href="/disbursements/pending" class="text-sm text-primary-600 hover:text-primary-700">
            View all →
          </a>
        </div>
      </div>
    </div>

    <!-- Approved DVs -->
    <div class="card">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 mb-1">Approved DVs</p>
            <p class="text-3xl font-bold text-gray-900">45</p>
          </div>
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
            <i class="pi pi-check-circle text-green-600 text-2xl"></i>
          </div>
        </div>
        <div class="mt-4">
          <a href="/disbursements?status=approved" class="text-sm text-primary-600 hover:text-primary-700">
            View all →
          </a>
        </div>
      </div>
    </div>

    <!-- Total Disbursements -->
    <div class="card">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 mb-1">Total Disbursements</p>
            <p class="text-3xl font-bold text-gray-900">₱2.5M</p>
          </div>
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <i class="pi pi-wallet text-blue-600 text-2xl"></i>
          </div>
        </div>
        <div class="mt-4">
          <p class="text-sm text-gray-500">This month</p>
        </div>
      </div>
    </div>

    <!-- Budget Utilization -->
    <div class="card">
      <div class="card-body">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 mb-1">Budget Utilization</p>
            <p class="text-3xl font-bold text-gray-900">68%</p>
          </div>
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <i class="pi pi-chart-pie text-purple-600 text-2xl"></i>
          </div>
        </div>
        <div class="mt-4">
          <a href="/budget/allotments" class="text-sm text-primary-600 hover:text-primary-700">
            View details →
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent DVs -->
    <div class="card">
      <div class="card-header">
        <h3 class="text-lg font-semibold">Recent Disbursement Vouchers</h3>
      </div>
      <div class="card-body">
        <div class="space-y-4">
          <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-0">
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900">DV-0001-12-2025</p>
              <p class="text-xs text-gray-500">Office Supplies</p>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium text-gray-900">₱25,000.00</p>
              <span class="badge badge-warning">Pending</span>
            </div>
          </div>
          <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-0">
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900">DV-0002-12-2025</p>
              <p class="text-xs text-gray-500">Electricity Bill</p>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium text-gray-900">₱15,500.00</p>
              <span class="badge badge-success">Approved</span>
            </div>
          </div>
          <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-0">
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900">DV-0003-12-2025</p>
              <p class="text-xs text-gray-500">Travel Expenses</p>
            </div>
            <div class="text-right">
              <p class="text-sm font-medium text-gray-900">₱8,750.00</p>
              <span class="badge badge-warning">Pending</span>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <a href="/disbursements" class="text-sm text-primary-600 hover:text-primary-700 font-medium">
          View all disbursements →
        </a>
      </div>
    </div>

    <!-- Pending Approvals -->
    <div class="card">
      <div class="card-header">
        <h3 class="text-lg font-semibold">Pending Approvals</h3>
      </div>
      <div class="card-body">
        <div class="space-y-4">
          <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-0">
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900">DV Budget Review</p>
              <p class="text-xs text-gray-500">3 items waiting</p>
            </div>
            <div class="text-right">
              <a href="/disbursements/pending?stage=budget" class="btn btn-sm btn-primary">
                Review
              </a>
            </div>
          </div>
          <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-0">
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900">Travel Approval</p>
              <p class="text-xs text-gray-500">2 items waiting</p>
            </div>
            <div class="text-right">
              <a href="/travel/itinerary?status=pending" class="btn btn-sm btn-primary">
                Review
              </a>
            </div>
          </div>
          <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-0">
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900">Liquidation Reports</p>
              <p class="text-xs text-gray-500">1 item waiting</p>
            </div>
            <div class="text-right">
              <a href="/travel/liquidation?status=pending" class="btn btn-sm btn-primary">
                Review
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <a href="/disbursements/pending" class="text-sm text-primary-600 hover:text-primary-700 font-medium">
          View all pending items →
        </a>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="mt-6">
    <h2 class="section-title">Quick Actions</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <a
        href="/disbursements/create"
        class="card hover:shadow-md transition-shadow cursor-pointer"
      >
        <div class="card-body text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-3">
            <i class="pi pi-plus text-primary-600 text-xl"></i>
          </div>
          <p class="text-sm font-medium text-gray-900">New DV</p>
        </div>
      </a>

      <a
        href="/travel/itinerary/create"
        class="card hover:shadow-md transition-shadow cursor-pointer"
      >
        <div class="card-body text-center">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-3">
            <i class="pi pi-map-marker text-green-600 text-xl"></i>
          </div>
          <p class="text-sm font-medium text-gray-900">New Travel</p>
        </div>
      </a>

      <a
        href="/cash/receipts/create"
        class="card hover:shadow-md transition-shadow cursor-pointer"
      >
        <div class="card-body text-center">
          <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mx-auto mb-3">
            <i class="pi pi-money-bill text-yellow-600 text-xl"></i>
          </div>
          <p class="text-sm font-medium text-gray-900">Cash Receipt</p>
        </div>
      </a>

      <a
        href="/reports"
        class="card hover:shadow-md transition-shadow cursor-pointer"
      >
        <div class="card-body text-center">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-3">
            <i class="pi pi-chart-bar text-purple-600 text-xl"></i>
          </div>
          <p class="text-sm font-medium text-gray-900">Generate Report</p>
        </div>
      </a>
    </div>
  </div>
</MainLayout>
