---
import MainLayout from '../../../layouts/MainLayout.astro';
import CollectionForm from '../../../components/forms/revenue/CollectionForm.vue';
import { revenueService } from '../../../lib/services/revenue.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Fetch outstanding/partial ARs for form dropdown
const availableARs = await revenueService.getAccountsReceivable({
  status: 'outstanding',
});
const partialARs = await revenueService.getAccountsReceivable({
  status: 'partial',
});

// Combine outstanding and partial ARs
const allAvailableARs = [...availableARs, ...partialARs];
---

<MainLayout title="Record Collection">
  <div class="container mx-auto px-4 py-6">
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <a href="/revenue" class="text-gray-700 hover:text-primary-600">
            Revenue
          </a>
        </li>
        <li>
          <div class="flex items-center">
            <i class="pi pi-angle-right text-gray-400"></i>
            <a href="/revenue/collections" class="ml-1 text-gray-700 hover:text-primary-600 md:ml-2">
              Collections
            </a>
          </div>
        </li>
        <li aria-current="page">
          <div class="flex items-center">
            <i class="pi pi-angle-right text-gray-400"></i>
            <span class="ml-1 text-gray-500 md:ml-2">Create</span>
          </div>
        </li>
      </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Record Collection</h1>
      <p class="mt-1 text-sm text-gray-600">
        Record a payment collection against an accounts receivable
      </p>
    </div>

    <!-- Info Alert -->
    {allAvailableARs.length === 0 ? (
      <div class="mb-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <div class="flex items-center">
          <i class="pi pi-info-circle text-yellow-600 text-xl mr-3"></i>
          <div>
            <h3 class="text-sm font-semibold text-yellow-800">No Outstanding Receivables</h3>
            <p class="text-sm text-yellow-700 mt-1">
              There are no outstanding or partial accounts receivable to collect payment against.
              Please create an AR first.
            </p>
            <div class="mt-3">
              <a
                href="/revenue/receivables/create"
                class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yellow-600 hover:bg-yellow-700"
              >
                <i class="pi pi-plus mr-2"></i>
                Create Accounts Receivable
              </a>
            </div>
          </div>
        </div>
      </div>
    ) : (
      <>
        <!-- Form Card -->
        <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
          <CollectionForm
            client:only="vue"
            availableARsData={JSON.stringify(allAvailableARs)}
          />
        </div>

        <!-- Help Text -->
        <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex">
            <i class="pi pi-info-circle text-blue-600 text-lg mr-3 mt-0.5"></i>
            <div>
              <h3 class="text-sm font-semibold text-blue-900">Collection Tips</h3>
              <ul class="mt-2 text-sm text-blue-700 list-disc list-inside space-y-1">
                <li>Select the AR account you're collecting payment for</li>
                <li>The form will show you the current outstanding balance</li>
                <li>You can record partial payments or full payment</li>
                <li>For check payments, enter the check details</li>
                <li>Link to an OR (Official Receipt) number if applicable</li>
                <li>The AR status will automatically update when you submit</li>
              </ul>
            </div>
          </div>
        </div>
      </>
    )}
  </div>
</MainLayout>
