---
import MainLayout from '../../../layouts/MainLayout.astro';
import { revenueService } from '../../../lib/services/revenue.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/revenue/entries');
}

// Fetch revenue entry details
let entry;
try {
  entry = await revenueService.getRevenueEntryById(parseInt(id));
} catch (error) {
  console.error('Error loading revenue entry:', error);
  return Astro.redirect('/revenue/entries');
}
---

<MainLayout title={`Revenue Entry - ${entry.entryNo}`}>
  <div class="container mx-auto px-4 py-6">
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <a href="/revenue" class="text-gray-700 hover:text-primary-600">
            Revenue
          </a>
        </li>
        <li>
          <div class="flex items-center">
            <i class="pi pi-angle-right text-gray-400"></i>
            <a href="/revenue/entries" class="ml-1 text-gray-700 hover:text-primary-600 md:ml-2">
              Revenue Entries
            </a>
          </div>
        </li>
        <li aria-current="page">
          <div class="flex items-center">
            <i class="pi pi-angle-right text-gray-400"></i>
            <span class="ml-1 text-gray-500 md:ml-2">{entry.entryNo}</span>
          </div>
        </li>
      </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Revenue Entry Details</h1>
      <p class="mt-1 text-sm text-gray-600">
        Entry No: {entry.entryNo}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Details -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Entry Information -->
        <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <i class="pi pi-info-circle mr-2"></i>
            Entry Information
          </h2>
          <dl class="grid grid-cols-2 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Entry Number</dt>
              <dd class="mt-1 text-sm text-gray-900 font-semibold">{entry.entryNo}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Entry Date</dt>
              <dd class="mt-1 text-sm text-gray-900">
                {new Date(entry.entryDate).toLocaleDateString('en-PH', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Revenue Source</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <a href={`/revenue/sources/${entry.revenueSource.id}`} class="text-primary-600 hover:text-primary-800">
                  {entry.revenueSource.name}
                </a>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Fund Cluster</dt>
              <dd class="mt-1 text-sm text-gray-900">{entry.fundCluster?.name || '-'}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Amount</dt>
              <dd class="mt-1 text-2xl font-bold text-green-600">
                â‚±{parseFloat(entry.amount).toLocaleString('en-PH', { minimumFractionDigits: 2 })}
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Fiscal Year</dt>
              <dd class="mt-1 text-sm text-gray-900">{entry.fiscalYear}</dd>
            </div>
            {entry.payorName && (
              <div class="col-span-2">
                <dt class="text-sm font-medium text-gray-500">Payor Name</dt>
                <dd class="mt-1 text-sm text-gray-900">{entry.payorName}</dd>
              </div>
            )}
            {entry.particulars && (
              <div class="col-span-2">
                <dt class="text-sm font-medium text-gray-500">Particulars</dt>
                <dd class="mt-1 text-sm text-gray-900">{entry.particulars}</dd>
              </div>
            )}
          </dl>
        </div>

        <!-- Metadata -->
        <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Metadata</h2>
          <dl class="grid grid-cols-2 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Created By</dt>
              <dd class="mt-1 text-sm text-gray-900">{entry.createdBy?.fullName || '-'}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Created At</dt>
              <dd class="mt-1 text-sm text-gray-900">
                {new Date(entry.createdAt).toLocaleString('en-PH')}
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Actions</h3>
          <div class="space-y-3">
            <a
              href="/revenue/entries"
              class="block w-full px-4 py-2 text-center border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
            >
              <i class="pi pi-arrow-left mr-2"></i>
              Back to Entries
            </a>
            <a
              href="/revenue/entries/create"
              class="block w-full px-4 py-2 text-center border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
            >
              <i class="pi pi-plus mr-2"></i>
              New Entry
            </a>
          </div>
        </div>

        <!-- Summary Card -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
          <h3 class="text-sm font-semibold text-blue-900 mb-3">Revenue Summary</h3>
          <div class="space-y-2">
            <div class="flex justify-between text-sm">
              <span class="text-blue-700">Category:</span>
              <span class="font-medium text-blue-900">{entry.revenueSource.category}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-blue-700">Code:</span>
              <span class="font-medium text-blue-900">{entry.revenueSource.code}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-blue-700">Fund:</span>
              <span class="font-medium text-blue-900">{entry.fundCluster?.code || '-'}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
