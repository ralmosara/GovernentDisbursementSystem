---
import MainLayout from '../../../layouts/MainLayout.astro';
import { revenueService } from '../../../lib/services/revenue.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get filter parameters
const revenueSourceId = Astro.url.searchParams.get('revenueSourceId');
const fundClusterId = Astro.url.searchParams.get('fundClusterId');
const startDate = Astro.url.searchParams.get('startDate');
const endDate = Astro.url.searchParams.get('endDate');
const fiscalYear = Astro.url.searchParams.get('fiscalYear');

// Build filters
const filters: any = {};
if (revenueSourceId) filters.revenueSourceId = parseInt(revenueSourceId);
if (fundClusterId) filters.fundClusterId = parseInt(fundClusterId);
if (startDate) filters.startDate = new Date(startDate);
if (endDate) filters.endDate = new Date(endDate);
if (fiscalYear) filters.fiscalYear = parseInt(fiscalYear);

// Fetch revenue entries
const entries = await revenueService.getRevenueEntries(filters);

// Calculate total
const totalAmount = entries.reduce(
  (sum: number, entry: any) => sum + parseFloat(entry.amount),
  0
);

// Get revenue sources for filter dropdown
const revenueSources = await revenueService.getRevenueSources(true);
---

<MainLayout title="Revenue Entries">
  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Revenue Entries</h1>
        <p class="mt-1 text-sm text-gray-600">
          All recorded revenue transactions
        </p>
      </div>
      <a
        href="/revenue/entries/create"
        class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
      >
        <i class="pi pi-plus mr-2"></i>
        Record Revenue
      </a>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6">
      <form method="GET" class="grid grid-cols-1 md:grid-cols-5 gap-4">
        <div>
          <label for="revenueSourceId" class="block text-sm font-medium text-gray-700 mb-1">
            Revenue Source
          </label>
          <select
            id="revenueSourceId"
            name="revenueSourceId"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm"
          >
            <option value="">All Sources</option>
            {revenueSources.map((source: any) => (
              <option value={source.id} selected={revenueSourceId === source.id.toString()}>
                {source.name}
              </option>
            ))}
          </select>
        </div>
        <div>
          <label for="startDate" class="block text-sm font-medium text-gray-700 mb-1">
            Start Date
          </label>
          <input
            type="date"
            id="startDate"
            name="startDate"
            value={startDate || ''}
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm"
          />
        </div>
        <div>
          <label for="endDate" class="block text-sm font-medium text-gray-700 mb-1">
            End Date
          </label>
          <input
            type="date"
            id="endDate"
            name="endDate"
            value={endDate || ''}
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm"
          />
        </div>
        <div>
          <label for="fiscalYear" class="block text-sm font-medium text-gray-700 mb-1">
            Fiscal Year
          </label>
          <input
            type="number"
            id="fiscalYear"
            name="fiscalYear"
            value={fiscalYear || ''}
            placeholder="YYYY"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm"
          />
        </div>
        <div class="flex items-end space-x-2">
          <button
            type="submit"
            class="flex-1 px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
          >
            <i class="pi pi-filter mr-2"></i>
            Apply
          </button>
          <a
            href="/revenue/entries"
            class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
          >
            <i class="pi pi-times"></i>
          </a>
        </div>
      </form>
    </div>

    <!-- Revenue Entries Table -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
      {entries.length > 0 ? (
        <>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Entry No
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Date
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Revenue Source
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Fund Cluster
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Payor
                  </th>
                  <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Amount
                  </th>
                  <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Fiscal Year
                  </th>
                  <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                {entries.map((entry: any) => (
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-primary-600">
                      <a href={`/revenue/entries/${entry.id}`}>{entry.entryNo}</a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      {new Date(entry.entryDate).toLocaleDateString('en-PH')}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                      {entry.revenueSource?.name || '-'}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                      {entry.fundCluster?.code || '-'}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500">
                      {entry.payorName || '-'}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium text-gray-900">
                      ₱{parseFloat(entry.amount).toLocaleString('en-PH', { minimumFractionDigits: 2 })}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-gray-900">
                      {entry.fiscalYear}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <a
                        href={`/revenue/entries/${entry.id}`}
                        class="text-primary-600 hover:text-primary-900"
                      >
                        View
                      </a>
                    </td>
                  </tr>
                ))}
              </tbody>
              <tfoot class="bg-gray-50">
                <tr>
                  <td colspan="5" class="px-6 py-4 text-sm font-semibold text-gray-900 text-right">
                    Total:
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900 text-right">
                    ₱{totalAmount.toLocaleString('en-PH', { minimumFractionDigits: 2 })}
                  </td>
                  <td colspan="2"></td>
                </tr>
              </tfoot>
            </table>
          </div>
        </>
      ) : (
        <div class="px-6 py-12 text-center">
          <i class="pi pi-inbox text-gray-400 text-4xl mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No revenue entries found</h3>
          <p class="text-gray-500 mb-4">
            {Object.keys(filters).length > 0
              ? 'Try adjusting your filters or record a new revenue entry.'
              : 'Get started by recording your first revenue entry.'}
          </p>
          <a
            href="/revenue/entries/create"
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
          >
            <i class="pi pi-plus mr-2"></i>
            Record Revenue
          </a>
        </div>
      )}
    </div>

    <!-- Summary -->
    {entries.length > 0 && (
      <div class="mt-4 text-sm text-gray-600">
        Showing {entries.length} entry(ies)
        {Object.keys(filters).length > 0 && ' with filters applied'}
      </div>
    )}
  </div>
</MainLayout>
