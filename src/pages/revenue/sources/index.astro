---
import MainLayout from '../../../layouts/MainLayout.astro';
import { revenueService } from '../../../lib/services/revenue.service';

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect('/login');
}

// Get filter parameters
const isActiveFilter = Astro.url.searchParams.get('isActive');
const isActive = isActiveFilter === null ? undefined : isActiveFilter === 'true';

// Fetch revenue sources
const sources = await revenueService.getRevenueSources(isActive);
---

<MainLayout title="Revenue Sources">
  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Revenue Sources</h1>
        <p class="mt-1 text-sm text-gray-600">
          Manage revenue categories and sources
        </p>
      </div>
      <a
        href="/revenue/sources/create"
        class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
      >
        <i class="pi pi-plus mr-2"></i>
        Add Revenue Source
      </a>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow border border-gray-200 p-4 mb-6">
      <form method="GET" class="flex items-end space-x-4">
        <div class="flex-1">
          <label for="isActive" class="block text-sm font-medium text-gray-700 mb-1">
            Status
          </label>
          <select
            id="isActive"
            name="isActive"
            class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm"
          >
            <option value="">All Sources</option>
            <option value="true" selected={isActive === true}>Active Only</option>
            <option value="false" selected={isActive === false}>Inactive Only</option>
          </select>
        </div>
        <div>
          <button
            type="submit"
            class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
          >
            <i class="pi pi-filter mr-2"></i>
            Apply Filters
          </button>
        </div>
        <div>
          <a
            href="/revenue/sources"
            class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 inline-block"
          >
            <i class="pi pi-times mr-2"></i>
            Clear
          </a>
        </div>
      </form>
    </div>

    <!-- Revenue Sources Table -->
    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
      {sources.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Code
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Name
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Category
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Description
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {sources.map((source: any) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    {source.code}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    {source.name}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      {source.category}
                    </span>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500 max-w-xs truncate">
                    {source.description || '-'}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    {source.isActive ? (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <i class="pi pi-check-circle mr-1"></i>
                        Active
                      </span>
                    ) : (
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        <i class="pi pi-times-circle mr-1"></i>
                        Inactive
                      </span>
                    )}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <a
                      href={`/revenue/sources/${source.id}`}
                      class="text-primary-600 hover:text-primary-900 mr-4"
                    >
                      View
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      ) : (
        <div class="px-6 py-12 text-center">
          <i class="pi pi-inbox text-gray-400 text-4xl mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No revenue sources found</h3>
          <p class="text-gray-500 mb-4">Get started by creating your first revenue source.</p>
          <a
            href="/revenue/sources/create"
            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700"
          >
            <i class="pi pi-plus mr-2"></i>
            Add Revenue Source
          </a>
        </div>
      )}
    </div>

    <!-- Summary -->
    {sources.length > 0 && (
      <div class="mt-4 text-sm text-gray-600">
        Showing {sources.length} revenue source(s)
      </div>
    )}
  </div>
</MainLayout>
