---
import MainLayout from '../../layouts/MainLayout.astro';

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login');
}

const title = 'Travel Management';
---

<MainLayout title={title}>
  <div class="container mx-auto px-4 py-6">
    <!-- Header -->
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Travel Management</h1>
      <p class="text-gray-600 mt-1">Manage travel requests, approvals, and liquidations</p>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600">Pending Approvals</p>
            <p id="pendingApprovalsCount" class="text-3xl font-bold text-yellow-600">-</p>
          </div>
          <div class="bg-yellow-100 rounded-full p-3">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <a href="/travel/itinerary?status=pending_approval" class="text-sm text-blue-600 hover:text-blue-700 mt-2 inline-block">
          View all →
        </a>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600">In Progress</p>
            <p id="inProgressCount" class="text-3xl font-bold text-blue-600">-</p>
          </div>
          <div class="bg-blue-100 rounded-full p-3">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
        </div>
        <a href="/travel/itinerary?status=in_progress" class="text-sm text-blue-600 hover:text-blue-700 mt-2 inline-block">
          View all →
        </a>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600">Outstanding Cash Advances</p>
            <p id="outstandingCACount" class="text-3xl font-bold text-amber-600">-</p>
          </div>
          <div class="bg-amber-100 rounded-full p-3">
            <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <a href="/travel/liquidation" class="text-sm text-blue-600 hover:text-blue-700 mt-2 inline-block">
          View all →
        </a>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600">Unliquidated Travels</p>
            <p id="unliquidatedCount" class="text-3xl font-bold text-red-600">-</p>
          </div>
          <div class="bg-red-100 rounded-full p-3">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
          </div>
        </div>
        <a href="/travel/liquidation" class="text-sm text-blue-600 hover:text-blue-700 mt-2 inline-block">
          View all →
        </a>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <a
        href="/travel/itinerary/create"
        class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow border-2 border-transparent hover:border-blue-500"
      >
        <div class="flex items-center gap-4">
          <div class="bg-blue-100 rounded-full p-3">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900">Create Travel Request</h3>
            <p class="text-sm text-gray-600">New itinerary of travel</p>
          </div>
        </div>
      </a>

      <a
        href="/travel/itinerary"
        class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow border-2 border-transparent hover:border-green-500"
      >
        <div class="flex items-center gap-4">
          <div class="bg-green-100 rounded-full p-3">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900">View All Travel Requests</h3>
            <p class="text-sm text-gray-600">Manage travel itineraries</p>
          </div>
        </div>
      </a>

      <a
        href="/travel/liquidation"
        class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow border-2 border-transparent hover:border-purple-500"
      >
        <div class="flex items-center gap-4">
          <div class="bg-purple-100 rounded-full p-3">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900">Travel Liquidations</h3>
            <p class="text-sm text-gray-600">Manage expense liquidations</p>
          </div>
        </div>
      </a>
    </div>

    <!-- Pending Approvals Table -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">Recent Pending Approvals</h2>
      </div>

      <div id="pendingApprovalsLoading" class="p-8 text-center">
        <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
        <p class="mt-2 text-gray-600">Loading pending approvals...</p>
      </div>

      <div id="pendingApprovalsContainer" class="hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IoT No.</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employee</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Destination</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Departure</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody id="pendingApprovalsTableBody" class="bg-white divide-y divide-gray-200">
            </tbody>
          </table>
        </div>

        <div id="pendingApprovalsEmpty" class="hidden p-8 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p class="mt-4 text-gray-600">No pending approvals</p>
        </div>
      </div>
    </div>
  </div>

  <script>
    async function loadDashboardData() {
      try {
        const response = await fetch('/api/travel/dashboard');
        const data = await response.json();

        // Update counts
        const stats = data.stats || {};
        document.getElementById('pendingApprovalsCount')!.textContent = String(stats.pendingApproval || 0);
        document.getElementById('inProgressCount')!.textContent = String(stats.inProgress || 0);
        document.getElementById('outstandingCACount')!.textContent = String(data.outstandingCashAdvances?.length || 0);
        document.getElementById('unliquidatedCount')!.textContent = String(data.unliquidatedTravels?.length || 0);

        // Display pending approvals
        displayPendingApprovals(data.pendingApprovals || []);
      } catch (error) {
        console.error('Error loading dashboard data:', error);
        document.getElementById('pendingApprovalsLoading')?.classList.add('hidden');
        document.getElementById('pendingApprovalsContainer')?.classList.remove('hidden');
      }
    }

    function displayPendingApprovals(approvals) {
      const loading = document.getElementById('pendingApprovalsLoading');
      const container = document.getElementById('pendingApprovalsContainer');
      const tableBody = document.getElementById('pendingApprovalsTableBody');
      const emptyState = document.getElementById('pendingApprovalsEmpty');

      if (loading) loading.classList.add('hidden');
      if (container) container.classList.remove('hidden');

      if (!approvals || approvals.length === 0) {
        if (tableBody) tableBody.innerHTML = '';
        if (emptyState) emptyState.classList.remove('hidden');
        return;
      }

      if (emptyState) emptyState.classList.add('hidden');

      if (tableBody) {
        tableBody.innerHTML = approvals.slice(0, 5).map(item => {
          const iot = item.iot;
          const employee = item.employee;

          return `
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <a href="/travel/itinerary/${iot.id}" class="text-blue-600 hover:text-blue-800 font-medium">
                  ${iot.iotNo}
                </a>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">${employee?.firstName} ${employee?.lastName}</div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900">${iot.destination}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">${formatDate(iot.departureDate)}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <a href="/travel/itinerary/${iot.id}" class="text-blue-600 hover:text-blue-800">Review</a>
              </td>
            </tr>
          `;
        }).join('');
      }
    }

    function formatDate(dateString) {
      if (!dateString) return '';
      const date = new Date(dateString);
      return date.toLocaleDateString('en-PH', { year: 'numeric', month: 'short', day: 'numeric' });
    }

    document.addEventListener('DOMContentLoaded', () => {
      loadDashboardData();
    });
  </script>
</MainLayout>
